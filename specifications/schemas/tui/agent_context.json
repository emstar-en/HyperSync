{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "TUI context for agent interactions",
  "properties": {
    "active_panel": {
      "description": "Currently focused panel",
      "type": "string"
    },
    "layout": {
      "properties": {
        "panels": {
          "type": "array"
        },
        "template": {
          "type": "string"
        }
      },
      "type": "object"
    },
    "operator_intent": {
      "description": "Current operator task or intent",
      "type": "string"
    },
    "telemetry": {
      "description": "Current telemetry snapshot",
      "type": "object"
    }
  },
  "title": "Agent Context",
  "type": "object"
}