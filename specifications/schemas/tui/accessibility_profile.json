{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "Accessibility mode configuration",
  "properties": {
    "focus_mode_enabled": {
      "default": false,
      "type": "boolean"
    },
    "mode": {
      "enum": [
        "DEFAULT",
        "MONOCHROME",
        "HIGH_CONTRAST",
        "SCREEN_READER",
        "FOCUS_MODE"
      ],
      "type": "string"
    },
    "palette": {
      "properties": {
        "accent": {
          "type": "string"
        },
        "background": {
          "type": "string"
        },
        "error": {
          "type": "string"
        },
        "foreground": {
          "type": "string"
        },
        "success": {
          "type": "string"
        },
        "warning": {
          "type": "string"
        }
      },
      "type": "object"
    },
    "screen_reader_enabled": {
      "default": false,
      "type": "boolean"
    }
  },
  "required": [
    "mode"
  ],
  "title": "Accessibility Profile",
  "type": "object"
}