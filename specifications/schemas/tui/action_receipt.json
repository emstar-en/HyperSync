{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "Receipt for UI-driven orchestrator actions",
  "properties": {
    "action_id": {
      "type": "string"
    },
    "action_type": {
      "enum": [
        "DEPLOY",
        "SCALE",
        "MESH",
        "REPLICATE",
        "GOVERNANCE_APPROVE",
        "GOVERNANCE_REJECT"
      ],
      "type": "string"
    },
    "data": {
      "type": "object"
    },
    "integration_mode": {
      "type": "string"
    },
    "operator_id": {
      "type": "string"
    },
    "receipt_id": {
      "type": "string"
    },
    "result": {
      "type": "object"
    },
    "source": {
      "enum": [
        "TUI",
        "CLI",
        "API"
      ],
      "type": "string"
    },
    "timestamp": {
      "format": "date-time",
      "type": "string"
    }
  },
  "required": [
    "receipt_id",
    "action_id",
    "action_type",
    "operator_id",
    "timestamp"
  ],
  "title": "Action Receipt",
  "type": "object"
}