{
  "$id": "https://hypersync.ai/schemas/policy/dimensional_clearance_schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "Defines dimensional access clearances for users, agents, and workloads",
  "properties": {
    "clearance_id": {
      "description": "Unique clearance identifier",
      "type": "string"
    },
    "dimensional_permissions": {
      "properties": {
        "allowed_actions": {
          "description": "Allowed dimensional actions",
          "items": {
            "enum": [
              "dim:share",
              "dim:align",
              "dim:sync",
              "vector:attach",
              "vector:query",
              "contract:create",
              "contract:view",
              "route:negotiate"
            ],
            "type": "string"
          },
          "type": "array"
        },
        "curvature_bounds": {
          "description": "Allowed curvature range",
          "properties": {
            "max": {
              "maximum": 0.0,
              "minimum": -1.0,
              "type": "number"
            },
            "min": {
              "maximum": 0.0,
              "minimum": -1.0,
              "type": "number"
            }
          },
          "type": "object"
        },
        "dimension_restrictions": {
          "description": "Per-dimension access restrictions",
          "items": {
            "properties": {
              "access_level": {
                "enum": [
                  "read",
                  "write",
                  "none"
                ],
                "type": "string"
              },
              "dimension_id": {
                "type": "integer"
              }
            },
            "type": "object"
          },
          "type": "array"
        },
        "max_dimensions": {
          "description": "Maximum dimensions this subject can access",
          "maximum": 16,
          "minimum": 0,
          "type": "integer"
        }
      },
      "required": [
        "max_dimensions",
        "allowed_actions"
      ],
      "type": "object"
    },
    "inheritance": {
      "properties": {
        "enabled": {
          "default": true,
          "description": "Whether to inherit from parent clearance",
          "type": "boolean"
        },
        "override_allowed": {
          "default": false,
          "description": "Whether child can override restrictions",
          "type": "boolean"
        }
      },
      "type": "object"
    },
    "metadata": {
      "properties": {
        "created_at": {
          "format": "date-time",
          "type": "string"
        },
        "created_by": {
          "type": "string"
        },
        "tags": {
          "items": {
            "type": "string"
          },
          "type": "array"
        },
        "updated_at": {
          "format": "date-time",
          "type": "string"
        }
      },
      "type": "object"
    },
    "subject": {
      "properties": {
        "id": {
          "description": "Subject identifier",
          "type": "string"
        },
        "parent_clearance_id": {
          "description": "Parent clearance for inheritance",
          "type": "string"
        },
        "type": {
          "description": "Subject type",
          "enum": [
            "user",
            "agent",
            "workload",
            "node"
          ],
          "type": "string"
        }
      },
      "required": [
        "type",
        "id"
      ],
      "type": "object"
    },
    "validity": {
      "properties": {
        "end_time": {
          "format": "date-time",
          "type": "string"
        },
        "revoked": {
          "default": false,
          "type": "boolean"
        },
        "start_time": {
          "format": "date-time",
          "type": "string"
        }
      },
      "type": "object"
    }
  },
  "required": [
    "clearance_id",
    "subject",
    "dimensional_permissions"
  ],
  "title": "Dimensional Clearance Schema",
  "type": "object"
}