{
  "$id": "https://hypersync.io/schemas/policy/budget_v1.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "Token budget and enforcement policies",
  "properties": {
    "clearance": {
      "description": "Clearance levels for policy overrides",
      "properties": {
        "bypass_preprocess": {
          "description": "Roles that can bypass preprocessing requirement",
          "items": {
            "type": "string"
          },
          "type": "array"
        },
        "exceed_budget": {
          "description": "Roles that can exceed budget limits",
          "items": {
            "type": "string"
          },
          "type": "array"
        }
      },
      "type": "object"
    },
    "description": {
      "description": "Policy description",
      "type": "string"
    },
    "enabled": {
      "default": true,
      "description": "Whether policy is active",
      "type": "boolean"
    },
    "enforcement": {
      "description": "Enforcement configuration",
      "properties": {
        "action": {
          "description": "Action when limit exceeded",
          "enum": [
            "block",
            "warn",
            "throttle",
            "reroute"
          ],
          "type": "string"
        },
        "alert_threshold": {
          "default": 80,
          "description": "Alert when usage exceeds this percent of limit",
          "maximum": 100,
          "minimum": 0,
          "type": "number"
        },
        "fallback_provider": {
          "description": "Fallback provider when primary is over budget",
          "type": "string"
        },
        "require_preprocess": {
          "default": true,
          "description": "Require local preprocessing before cloud calls",
          "type": "boolean"
        }
      },
      "type": "object"
    },
    "limits": {
      "description": "Token budget limits",
      "properties": {
        "daily_cost_usd": {
          "description": "Maximum cost per day (USD)",
          "minimum": 0,
          "type": "number"
        },
        "daily_tokens": {
          "description": "Maximum tokens per day",
          "minimum": 0,
          "type": "integer"
        },
        "monthly_cost_usd": {
          "description": "Maximum cost per month (USD)",
          "minimum": 0,
          "type": "number"
        },
        "monthly_tokens": {
          "description": "Maximum tokens per month",
          "minimum": 0,
          "type": "integer"
        },
        "per_request_tokens": {
          "description": "Maximum tokens per request",
          "minimum": 0,
          "type": "integer"
        }
      },
      "type": "object"
    },
    "name": {
      "description": "Human-readable policy name",
      "type": "string"
    },
    "policy_id": {
      "description": "Unique policy identifier",
      "type": "string"
    },
    "priority": {
      "default": 0,
      "description": "Policy priority (higher = evaluated first)",
      "type": "integer"
    },
    "scope": {
      "description": "Policy scope",
      "properties": {
        "providers": {
          "description": "Provider IDs this policy applies to",
          "items": {
            "type": "string"
          },
          "type": "array"
        },
        "sessions": {
          "description": "Session IDs this policy applies to",
          "items": {
            "type": "string"
          },
          "type": "array"
        },
        "users": {
          "description": "User IDs this policy applies to",
          "items": {
            "type": "string"
          },
          "type": "array"
        }
      },
      "type": "object"
    },
    "verbs": {
      "description": "Policy verbs (actions this policy governs)",
      "items": {
        "enum": [
          "token:budget",
          "prompt:preprocess",
          "cloud:invoke",
          "provider:select"
        ],
        "type": "string"
      },
      "type": "array"
    }
  },
  "required": [
    "policy_id",
    "verbs",
    "limits"
  ],
  "title": "Budget Policy",
  "type": "object"
}