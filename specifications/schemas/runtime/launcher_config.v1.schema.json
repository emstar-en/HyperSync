{
  "$id": "hypersync.runtime.launcher_config.v1.schema.json",
  "$schema": "https://json-schema.org/draft-07/schema#",
  "additionalProperties": true,
  "description": "User-level configuration for the HyperSync runtime launcher.",
  "properties": {
    "launch_mode": {
      "description": "How HyperSync decides where to run the TUI at startup.",
      "enum": [
        "ask",
        "current_terminal",
        "external_xterm",
        "packed_terminal"
      ],
      "type": "string"
    },
    "modifiers": {
      "additionalProperties": false,
      "description": "User preferences that affect runtime behavior.",
      "properties": {
        "accessibility_mode": {
          "default": "auto",
          "description": "Preferred accessibility mode.",
          "enum": [
            "auto",
            "screen_reader",
            "high_contrast"
          ],
          "type": "string"
        },
        "low_bandwidth_default": {
          "default": false,
          "description": "If true, HyperSync should default to low-bandwidth UI behavior.",
          "type": "boolean"
        }
      },
      "type": "object"
    }
  },
  "required": [
    "launch_mode"
  ],
  "title": "HyperSync Launcher Configuration",
  "type": "object"
}