{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "Policy configuration using surreal numbers for costs and priorities",
  "properties": {
    "costs": {
      "properties": {
        "compute_cost": {
          "type": "object"
        },
        "memory_cost": {
          "type": "object"
        },
        "network_cost": {
          "type": "object"
        }
      },
      "type": "object"
    },
    "policy_id": {
      "type": "string"
    },
    "priorities": {
      "properties": {
        "birthday_rank": {
          "type": "object"
        },
        "execution_priority": {
          "type": "object"
        }
      },
      "type": "object"
    }
  },
  "required": [
    "policy_id",
    "costs",
    "priorities"
  ],
  "title": "Surreal Policy Configuration",
  "type": "object"
}