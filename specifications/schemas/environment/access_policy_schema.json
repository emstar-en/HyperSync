{
  "$id": "https://hypersync.ai/schemas/environment/access_policy_schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "Defines filesystem access policies with least-privilege controls for agent sandboxes",
  "properties": {
    "agent_id": {
      "description": "Agent this policy applies to",
      "type": "string"
    },
    "isolation": {
      "description": "Isolation mechanism configuration",
      "properties": {
        "mode": {
          "default": "namespace",
          "description": "Isolation technology to use",
          "enum": [
            "none",
            "namespace",
            "cgroup",
            "container",
            "vm"
          ],
          "type": "string"
        },
        "network_isolated": {
          "default": false,
          "description": "Isolate network access",
          "type": "boolean"
        },
        "pid_isolated": {
          "default": true,
          "description": "Isolate process namespace",
          "type": "boolean"
        }
      },
      "type": "object"
    },
    "metadata": {
      "properties": {
        "created_at": {
          "format": "date-time",
          "type": "string"
        },
        "created_by": {
          "type": "string"
        },
        "tags": {
          "items": {
            "type": "string"
          },
          "type": "array"
        },
        "updated_at": {
          "format": "date-time",
          "type": "string"
        }
      },
      "type": "object"
    },
    "paths": {
      "properties": {
        "allowed": {
          "description": "Paths the agent can access",
          "items": {
            "properties": {
              "clearance_required": {
                "default": "internal",
                "enum": [
                  "public",
                  "internal",
                  "confidential",
                  "restricted",
                  "critical"
                ],
                "type": "string"
              },
              "path": {
                "description": "Absolute filesystem path",
                "type": "string"
              },
              "permissions": {
                "items": {
                  "enum": [
                    "read",
                    "write",
                    "execute",
                    "list",
                    "delete"
                  ],
                  "type": "string"
                },
                "minItems": 1,
                "type": "array"
              },
              "recursive": {
                "default": true,
                "description": "Apply to subdirectories",
                "type": "boolean"
              }
            },
            "required": [
              "path",
              "permissions"
            ],
            "type": "object"
          },
          "type": "array"
        },
        "default_dirs": {
          "description": "Default working directories for agent",
          "items": {
            "type": "string"
          },
          "type": "array"
        },
        "denied": {
          "description": "Explicitly denied paths (overrides allowed)",
          "items": {
            "type": "string"
          },
          "type": "array"
        }
      },
      "required": [
        "allowed",
        "denied",
        "default_dirs"
      ],
      "type": "object"
    },
    "policy_id": {
      "description": "Unique identifier for this access policy",
      "pattern": "^env-policy-[a-z0-9-]+$",
      "type": "string"
    },
    "quotas": {
      "description": "Resource limits for sandbox",
      "properties": {
        "cpu_shares": {
          "default": 512,
          "description": "CPU scheduling weight",
          "maximum": 1024,
          "minimum": 1,
          "type": "integer"
        },
        "max_disk_mb": {
          "description": "Maximum disk usage in MB",
          "minimum": 1,
          "type": "integer"
        },
        "max_inodes": {
          "description": "Maximum number of files/directories",
          "minimum": 1,
          "type": "integer"
        },
        "max_open_files": {
          "default": 1024,
          "description": "Maximum concurrent open file handles",
          "minimum": 1,
          "type": "integer"
        },
        "memory_mb": {
          "description": "Maximum memory allocation in MB",
          "minimum": 1,
          "type": "integer"
        }
      },
      "type": "object"
    }
  },
  "required": [
    "policy_id",
    "agent_id",
    "version",
    "paths",
    "quotas"
  ],
  "title": "Environment Access Policy Schema",
  "type": "object"
}