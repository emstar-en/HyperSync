{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Orchestration Strategy Definition",
  "description": "Defines how MOM should handle specific workloads or scenarios",
  "type": "object",
  "properties": {
    "strategy_id": {
      "type": "string"
    },
    "trigger_conditions": {
      "type": "object",
      "properties": {
        "workload_type": {
          "type": "string"
        },
        "resource_pressure": {
          "type": "string",
          "enum": [
            "low",
            "medium",
            "high",
            "critical"
          ]
        },
        "anomaly_detected": {
          "type": "boolean"
        }
      }
    },
    "scaling_policy": {
      "type": "object",
      "properties": {
        "method": {
          "type": "string",
          "enum": [
            "predictive",
            "reactive",
            "manual"
          ]
        },
        "min_replicas": {
          "type": "integer"
        },
        "max_replicas": {
          "type": "integer"
        },
        "cooldown_period": {
          "type": "integer"
        }
      }
    },
    "placement_policy": {
      "type": "object",
      "properties": {
        "geometric_affinity": {
          "type": "boolean",
          "default": true
        },
        "preferred_regions": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "avoid_nodes": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "resilience_policy": {
      "type": "object",
      "properties": {
        "redundancy_level": {
          "type": "integer",
          "default": 1
        },
        "failover_strategy": {
          "type": "string",
          "enum": [
            "active_passive",
            "active_active",
            "n_plus_1"
          ]
        }
      }
    }
  }
}