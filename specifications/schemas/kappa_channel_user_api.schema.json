{
  "$id": "kappa_channel_user_api.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "User-facing API for kappa channel operations and curvature management",
  "properties": {
    "channel_id": {
      "description": "Unique identifier for kappa channel",
      "type": "string"
    },
    "kappa_value": {
      "description": "Curvature parameter (negative for hyperbolic)",
      "type": "number"
    },
    "operations": {
      "items": {
        "enum": [
          "create_channel",
          "transition_kappa",
          "query_channel",
          "validate_curvature",
          "list_channels"
        ],
        "type": "string"
      },
      "type": "array"
    },
    "semantic_density": {
      "description": "Semantic density regime",
      "enum": [
        "dense",
        "standard",
        "rarified"
      ],
      "type": "string"
    }
  },
  "title": "Kappa Channel User API Schema",
  "type": "object"
}