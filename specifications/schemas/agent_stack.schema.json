{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Agent Stack Definition",
  "description": "Blueprint for assembling models and tools into a functional Agent Node.",
  "type": "object",
  "properties": {
    "stack_id": {
      "type": "string"
    },
    "name": {
      "type": "string"
    },
    "objective_alignment": {
      "type": "string",
      "enum": [
        "strict",
        "loose",
        "creative",
        "adversarial"
      ],
      "description": "How strictly the agent adheres to its objective."
    },
    "layers": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "layer_type": {
            "type": "string",
            "enum": [
              "cognitive",
              "memory",
              "perception",
              "action"
            ]
          },
          "model_ref": {
            "type": "string",
            "description": "Reference to a model ID in the registry"
          },
          "config": {
            "type": "object"
          }
        }
      }
    },
    "geometry_config": {
      "type": "object",
      "properties": {
        "preferred_curvature": {
          "type": "number"
        },
        "movement_policy": {
          "type": "string"
        }
      }
    }
  }
}