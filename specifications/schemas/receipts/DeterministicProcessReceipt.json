{
  "$id": "schema://receipts/DeterministicProcessReceipt.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Deterministic Process Receipt",
  "description": "A receipt proving that a process was executed deterministically with specific inputs and environment settings.",
  "type": "object",
  "properties": {
    "receipt_kind": {
      "const": "DeterministicProcessReceipt"
    },
    "process_id": {
      "type": "string",
      "format": "uuid",
      "description": "Unique identifier of the process execution."
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "Time of execution start."
    },
    "env": {
      "type": "object",
      "description": "Environmental variables and settings captured at execution time.",
      "properties": {
        "os": {
          "type": "string"
        },
        "python_version": {
          "type": "string"
        },
        "dependencies": {
          "type": "object",
          "additionalProperties": {
            "type": "string"
          }
        },
        "geometry_context": {
          "type": "object",
          "properties": {
            "curvature": {
              "type": "number"
            },
            "manifold_id": {
              "type": "string"
            }
          }
        }
      },
      "required": [
        "os",
        "python_version"
      ]
    },
    "seeds": {
      "type": "object",
      "description": "Random seeds used for initialization.",
      "properties": {
        "global_seed": {
          "type": "integer"
        },
        "numpy_seed": {
          "type": "integer"
        },
        "torch_seed": {
          "type": "integer"
        }
      },
      "required": [
        "global_seed"
      ]
    },
    "precision": {
      "type": "object",
      "description": "Floating point precision settings.",
      "properties": {
        "float_mode": {
          "type": "string",
          "enum": [
            "float32",
            "float64",
            "bfloat16"
          ]
        },
        "matmul_precision": {
          "type": "string",
          "enum": [
            "highest",
            "high",
            "medium"
          ]
        }
      }
    },
    "input_hash": {
      "type": "string",
      "description": "SHA-256 hash of the input data."
    },
    "output_hash": {
      "type": "string",
      "description": "SHA-256 hash of the output result."
    }
  },
  "required": [
    "receipt_kind",
    "process_id",
    "env",
    "seeds",
    "input_hash",
    "output_hash"
  ]
}