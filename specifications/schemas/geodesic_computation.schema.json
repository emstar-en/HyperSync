{
  "$id": "geodesic_computation.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "Schema for computing geodesic curves",
  "properties": {
    "end_point": {
      "type": "object",
      "description": "Point in the Poincar\u00e9 disk (complex number z = x + iy)",
      "properties": {
        "x": {
          "type": "number",
          "description": "Real component (coordinate x)"
        },
        "y": {
          "type": "number",
          "description": "Imaginary component (coordinate y)"
        }
      },
      "required": [
        "x",
        "y"
      ],
      "additionalProperties": false
    },
    "kappa": {
      "type": "number"
    },
    "num_points": {
      "default": 100,
      "description": "Number of points along geodesic",
      "minimum": 2,
      "type": "integer"
    },
    "return_tangents": {
      "default": false,
      "description": "Return tangent vectors along curve",
      "type": "boolean"
    },
    "start_point": {
      "type": "object",
      "description": "Point in the Poincar\u00e9 disk (complex number z = x + iy)",
      "properties": {
        "x": {
          "type": "number",
          "description": "Real component (coordinate x)"
        },
        "y": {
          "type": "number",
          "description": "Imaginary component (coordinate y)"
        }
      },
      "required": [
        "x",
        "y"
      ],
      "additionalProperties": false
    }
  },
  "required": [
    "start_point",
    "end_point",
    "kappa"
  ],
  "title": "Geodesic Computation Schema",
  "type": "object"
}