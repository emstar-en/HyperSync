{
  "$id": "https://hypersync.io/schemas/agent/profile/v1",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "additionalProperties": false,
  "description": "Defines a reusable agent blueprint composing nodes, models, and routing strategies",
  "properties": {
    "agent_id": {
      "description": "Unique identifier for this agent profile (auto-generated if not provided)",
      "pattern": "^agent-[a-z0-9-]+$",
      "type": "string"
    },
    "annotations": {
      "additionalProperties": {
        "type": "string"
      },
      "description": "User-defined metadata for organization and discovery",
      "type": "object"
    },
    "capabilities": {
      "description": "Capability requirements and constraints",
      "properties": {
        "excluded": {
          "description": "Capabilities that must NOT be present",
          "items": {
            "type": "string"
          },
          "type": "array"
        },
        "preferred": {
          "description": "Capabilities that are preferred but not required",
          "items": {
            "type": "string"
          },
          "type": "array"
        },
        "required": {
          "description": "Capabilities that must be present on selected nodes",
          "items": {
            "type": "string"
          },
          "type": "array"
        }
      },
      "type": "object"
    },
    "description": {
      "description": "Purpose and capabilities of this agent",
      "maxLength": 512,
      "type": "string"
    },
    "lifecycle": {
      "description": "Lifecycle state and timestamps",
      "properties": {
        "created_at": {
          "format": "date-time",
          "type": "string"
        },
        "created_by": {
          "description": "User or system that created this profile",
          "type": "string"
        },
        "state": {
          "default": "draft",
          "enum": [
            "draft",
            "active",
            "deprecated",
            "archived"
          ],
          "type": "string"
        },
        "updated_at": {
          "format": "date-time",
          "type": "string"
        }
      },
      "type": "object"
    },
    "name": {
      "description": "Human-readable agent name",
      "maxLength": 64,
      "minLength": 3,
      "pattern": "^[a-z][a-z0-9-]*$",
      "type": "string"
    },
    "nodes": {
      "description": "List of node IDs this agent can delegate to",
      "items": {
        "pattern": "^node-[a-z0-9-]+$",
        "type": "string"
      },
      "minItems": 1,
      "type": "array",
      "uniqueItems": true
    },
    "policy_bindings": {
      "description": "Security and governance policy references",
      "properties": {
        "clearance_level": {
          "description": "Maximum clearance level this agent operates at",
          "enum": [
            "public",
            "internal",
            "restricted",
            "confidential",
            "secret"
          ],
          "type": "string"
        },
        "policy_set": {
          "description": "Reference to policy set governing this agent",
          "type": "string"
        },
        "redaction_profile": {
          "description": "Named redaction profile for output sanitization",
          "type": "string"
        }
      },
      "type": "object"
    },
    "routing_config": {
      "description": "Strategy-specific configuration parameters",
      "properties": {
        "fallback_strategy": {
          "description": "Fallback if primary strategy fails",
          "enum": [
            "best_fit",
            "round_robin",
            "fail"
          ],
          "type": "string"
        },
        "sequence": {
          "description": "Ordered node list for explicit_sequence strategy",
          "items": {
            "type": "string"
          },
          "type": "array"
        },
        "weights": {
          "additionalProperties": {
            "maximum": 1,
            "minimum": 0,
            "type": "number"
          },
          "description": "Node weights for priority_weighted strategy",
          "type": "object"
        }
      },
      "type": "object"
    },
    "routing_strategy": {
      "description": "Strategy for selecting nodes during delegation",
      "enum": [
        "best_fit",
        "round_robin",
        "priority_weighted",
        "capability_match",
        "load_balanced",
        "explicit_sequence"
      ],
      "type": "string"
    },
    "telemetry": {
      "description": "Telemetry and observability configuration",
      "properties": {
        "emit_metrics": {
          "default": true,
          "type": "boolean"
        },
        "emit_traces": {
          "default": true,
          "type": "boolean"
        },
        "sample_rate": {
          "default": 1.0,
          "maximum": 1,
          "minimum": 0,
          "type": "number"
        }
      },
      "type": "object"
    }
  },
  "required": [
    "name",
    "version",
    "nodes",
    "routing_strategy"
  ],
  "title": "HyperSync Agent Profile Schema",
  "type": "object"
}