{
  "$id": "kappa_transition.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "properties": {
    "preserve_semantics": {
      "default": true,
      "type": "boolean"
    },
    "source_kappa": {
      "type": "number"
    },
    "target_kappa": {
      "type": "number"
    },
    "transition_method": {
      "enum": [
        "parallel_transport",
        "exponential_map",
        "direct"
      ],
      "type": "string"
    }
  },
  "required": [
    "source_kappa",
    "target_kappa"
  ],
  "title": "Kappa Transition Schema",
  "type": "object"
}