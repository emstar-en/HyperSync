{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Movement Policy",
  "description": "Defines how an agent traverses the hyperbolic space, controlling exploration vs. exploitation behavior.",
  "type": "object",
  "properties": {
    "policy_id": {
      "type": "string"
    },
    "type": {
      "type": "string",
      "enum": [
        "gradient_descent",
        "random_walk",
        "levy_flight",
        "brownian",
        "orbital"
      ]
    },
    "parameters": {
      "type": "object",
      "properties": {
        "temperature": {
          "type": "number",
          "minimum": 0.0,
          "maximum": 1.0,
          "description": "Controls randomness. 0.0 = Deterministic, 1.0 = Chaotic."
        },
        "momentum": {
          "type": "number",
          "description": "Tendency to continue in the current direction."
        },
        "step_size": {
          "type": "number",
          "description": "Base magnitude of movement vectors."
        },
        "exploration_bias": {
          "type": "number",
          "description": "Weight given to visiting unexplored sectors."
        }
      }
    },
    "constraints": {
      "type": "object",
      "properties": {
        "max_drift": {
          "type": "number"
        },
        "boundary_behavior": {
          "type": "string",
          "enum": [
            "reflect",
            "absorb",
            "wrap"
          ]
        }
      }
    }
  }
}