{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "properties": {
    "action": {
      "type": "string"
    },
    "event_id": {
      "type": "string"
    },
    "event_type": {
      "enum": [
        "operation",
        "state_change",
        "access",
        "authentication",
        "authorization",
        "configuration",
        "security",
        "compliance"
      ]
    },
    "outcome": {
      "enum": [
        "success",
        "failure",
        "partial"
      ]
    },
    "resource": {
      "type": "string"
    },
    "severity": {
      "enum": [
        "debug",
        "info",
        "warning",
        "error",
        "critical"
      ]
    }
  },
  "required": [
    "event_id",
    "event_type",
    "action",
    "resource",
    "outcome"
  ],
  "title": "Audit Event",
  "type": "object"
}