{
  "$id": "https://hypersync.ai/schemas/dimensional/local_policy_schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "Defines dimensional governance for standalone HyperSync stacks",
  "properties": {
    "agent_bindings": {
      "description": "Agent-specific dimensional overrides",
      "items": {
        "properties": {
          "agent_id": {
            "type": "string"
          },
          "curvature_override": {
            "maximum": 0.0,
            "minimum": -1.0,
            "type": "number"
          },
          "dimensions": {
            "maximum": 16,
            "minimum": 2,
            "type": "integer"
          }
        },
        "required": [
          "agent_id",
          "dimensions"
        ],
        "type": "object"
      },
      "type": "array"
    },
    "curvature_policy": {
      "properties": {
        "auto_calibrate": {
          "default": false,
          "description": "Enable automatic curvature calibration",
          "type": "boolean"
        },
        "bounds": {
          "properties": {
            "max": {
              "maximum": 0.0,
              "minimum": -1.0,
              "type": "number"
            },
            "min": {
              "maximum": 0.0,
              "minimum": -1.0,
              "type": "number"
            }
          },
          "required": [
            "min",
            "max"
          ],
          "type": "object"
        },
        "default_curvature": {
          "description": "Default hyperbolic curvature (negative for hyperbolic space)",
          "maximum": 0.0,
          "minimum": -1.0,
          "type": "number"
        },
        "stability_threshold": {
          "description": "Minimum stability score required for curvature changes",
          "maximum": 1.0,
          "minimum": 0.0,
          "type": "number"
        }
      },
      "required": [
        "default_curvature",
        "bounds",
        "stability_threshold"
      ],
      "type": "object"
    },
    "dimensional_config": {
      "properties": {
        "base_dimensions": {
          "description": "Default dimensional space for operations",
          "maximum": 8,
          "minimum": 2,
          "type": "integer"
        },
        "custom_dims": {
          "items": {
            "properties": {
              "dim_id": {
                "minimum": 0,
                "type": "integer"
              },
              "enabled": {
                "type": "boolean"
              },
              "metadata": {
                "type": "object"
              },
              "purpose": {
                "description": "Semantic purpose of this dimension",
                "type": "string"
              }
            },
            "required": [
              "dim_id",
              "purpose",
              "enabled"
            ],
            "type": "object"
          },
          "type": "array"
        },
        "max_dimensions": {
          "description": "Maximum allowed dimensions for this stack",
          "maximum": 16,
          "minimum": 2,
          "type": "integer"
        },
        "preset": {
          "description": "Predefined dimensional configuration preset",
          "enum": [
            "minimal",
            "standard",
            "extended",
            "research",
            "custom"
          ],
          "type": "string"
        }
      },
      "required": [
        "base_dimensions",
        "max_dimensions",
        "preset"
      ],
      "type": "object"
    },
    "metadata": {
      "properties": {
        "created_at": {
          "format": "date-time",
          "type": "string"
        },
        "created_by": {
          "type": "string"
        },
        "tags": {
          "items": {
            "type": "string"
          },
          "type": "array"
        },
        "updated_at": {
          "format": "date-time",
          "type": "string"
        }
      },
      "type": "object"
    },
    "stack_id": {
      "description": "Unique identifier for this local stack",
      "type": "string"
    }
  },
  "required": [
    "version",
    "stack_id",
    "dimensional_config",
    "curvature_policy"
  ],
  "title": "Local Dimensional Policy Schema",
  "type": "object"
}