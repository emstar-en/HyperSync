{
  "$id": "https://hypersync.io/schemas/consensus_tier_mapping.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "Schema for validating consensus mechanism to service tier mappings",
  "properties": {
    "created": {
      "format": "date-time",
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "enforcement_model": {
      "properties": {
        "description": {
          "type": "string"
        },
        "runtime_checks": {
          "type": "boolean"
        },
        "type": {
          "enum": [
            "installation_based",
            "runtime_check",
            "hybrid"
          ],
          "type": "string"
        }
      },
      "required": [
        "type"
      ],
      "type": "object"
    },
    "tiers": {
      "patternProperties": {
        "^[A-Z_]+$": {
          "properties": {
            "attestation_level": {
              "type": "string"
            },
            "display_name": {
              "type": "string"
            },
            "features": {
              "type": "object"
            },
            "inherits_from": {
              "type": "string"
            },
            "mechanisms": {
              "items": {
                "properties": {
                  "id": {
                    "type": "string"
                  },
                  "name": {
                    "type": "string"
                  },
                  "primary_use": {
                    "type": "string"
                  },
                  "safety_critical": {
                    "type": "boolean"
                  },
                  "weight": {
                    "enum": [
                      "lightweight",
                      "light",
                      "moderate",
                      "heavy",
                      "very_heavy"
                    ],
                    "type": "string"
                  }
                },
                "required": [
                  "id",
                  "name",
                  "weight"
                ],
                "type": "object"
              },
              "type": "array"
            },
            "tier_id": {
              "type": "string"
            },
            "tier_position": {
              "minimum": 1,
              "type": "integer"
            },
            "total_mechanisms": {
              "minimum": 0,
              "type": "integer"
            },
            "use_case": {
              "type": "string"
            }
          },
          "required": [
            "tier_id",
            "tier_position",
            "mechanisms"
          ],
          "type": "object"
        }
      },
      "type": "object"
    }
  },
  "required": [
    "version",
    "enforcement_model",
    "tiers"
  ],
  "title": "Consensus Tier Mapping Schema",
  "type": "object"
}