{
  "$id": "https://hypersync.ai/schemas/telemetry/dimensional_metrics_schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "Aggregated metrics for dimensional operations",
  "properties": {
    "aggregation": {
      "properties": {
        "type": {
          "enum": [
            "sum",
            "avg",
            "min",
            "max",
            "p50",
            "p95",
            "p99"
          ],
          "type": "string"
        },
        "window_seconds": {
          "type": "integer"
        }
      },
      "type": "object"
    },
    "dimensions": {
      "description": "Metric dimensions for grouping",
      "properties": {
        "agent_id": {
          "type": "string"
        },
        "node_id": {
          "type": "string"
        },
        "operation": {
          "type": "string"
        },
        "status": {
          "type": "string"
        }
      },
      "type": "object"
    },
    "metric_name": {
      "description": "Metric identifier",
      "type": "string"
    },
    "timestamp": {
      "format": "date-time",
      "type": "string"
    },
    "unit": {
      "description": "Metric unit",
      "enum": [
        "count",
        "ms",
        "mbps",
        "percent",
        "ratio"
      ],
      "type": "string"
    },
    "value": {
      "description": "Metric value",
      "type": "number"
    }
  },
  "required": [
    "metric_name",
    "timestamp",
    "value"
  ],
  "title": "Dimensional Metrics Schema",
  "type": "object"
}