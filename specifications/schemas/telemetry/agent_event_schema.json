{
  "$id": "https://hypersync.io/schemas/telemetry/agent_event/v1",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "Structured telemetry events for agent lifecycle, delegation, and security operations",
  "properties": {
    "agent_id": {
      "description": "Agent identifier",
      "pattern": "^agent-[a-z0-9-]+$",
      "type": "string"
    },
    "attributes": {
      "description": "Event-specific attributes",
      "type": "object"
    },
    "event_id": {
      "description": "Unique event identifier",
      "pattern": "^evt-[a-z0-9-]+$",
      "type": "string"
    },
    "event_type": {
      "description": "Type of telemetry event",
      "enum": [
        "agent.created",
        "agent.activated",
        "agent.suspended",
        "agent.deleted",
        "agent.updated",
        "delegation.started",
        "delegation.completed",
        "delegation.failed",
        "clearance.checked",
        "clearance.escalated",
        "clearance.denied",
        "redaction.applied",
        "policy.evaluated",
        "policy.violated",
        "composition.started",
        "composition.completed",
        "composition.failed"
      ],
      "type": "string"
    },
    "metadata": {
      "description": "Additional metadata",
      "type": "object"
    },
    "parent_span_id": {
      "description": "Parent span identifier for nested operations",
      "type": "string"
    },
    "requester_id": {
      "description": "Original requester identifier",
      "type": "string"
    },
    "security_context": {
      "description": "Security-relevant context",
      "type": "object"
    },
    "span_id": {
      "description": "Span identifier within trace",
      "type": "string"
    },
    "timestamp": {
      "description": "Event timestamp in ISO 8601 format",
      "format": "date-time",
      "type": "string"
    },
    "trace_id": {
      "description": "Distributed trace identifier for correlation",
      "type": "string"
    }
  },
  "required": [
    "event_id",
    "event_type",
    "timestamp",
    "agent_id"
  ],
  "title": "HyperSync Agent Telemetry Event Schema",
  "type": "object"
}