{
  "$id": "https://hypersync.ai/schemas/vector/orthogonal_frame_schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "Defines orthogonal subspace allocation for federated vector stores",
  "properties": {
    "base_dimensions": {
      "description": "Shared dimensional indices",
      "items": {
        "minimum": 0,
        "type": "integer"
      },
      "type": "array"
    },
    "cache_config": {
      "properties": {
        "enabled": {
          "default": true,
          "type": "boolean"
        },
        "max_entries": {
          "minimum": 100,
          "type": "integer"
        },
        "ttl_seconds": {
          "minimum": 60,
          "type": "integer"
        }
      },
      "type": "object"
    },
    "frame_id": {
      "description": "Unique frame identifier",
      "type": "string"
    },
    "metadata": {
      "properties": {
        "created_at": {
          "format": "date-time",
          "type": "string"
        },
        "updated_at": {
          "format": "date-time",
          "type": "string"
        }
      },
      "type": "object"
    },
    "node_id": {
      "description": "Node this frame is allocated to",
      "type": "string"
    },
    "projection_matrix": {
      "properties": {
        "data": {
          "items": {
            "items": {
              "type": "number"
            },
            "type": "array"
          },
          "type": "array"
        },
        "orthogonality_score": {
          "description": "Measure of orthogonality (1.0 = perfect)",
          "maximum": 1.0,
          "minimum": 0.0,
          "type": "number"
        },
        "shape": {
          "items": {
            "type": "integer"
          },
          "maxItems": 2,
          "minItems": 2,
          "type": "array"
        }
      },
      "required": [
        "shape",
        "data"
      ],
      "type": "object"
    },
    "routing_geometry": {
      "properties": {
        "distortion_factor": {
          "description": "Geometric distortion measure",
          "minimum": 0.0,
          "type": "number"
        },
        "preserved": {
          "description": "Whether routing geometry is preserved",
          "type": "boolean"
        }
      },
      "type": "object"
    },
    "vector_dimensions": {
      "description": "Dimensionality of vector embeddings",
      "minimum": 1,
      "type": "integer"
    }
  },
  "required": [
    "frame_id",
    "base_dimensions",
    "vector_dimensions",
    "projection_matrix"
  ],
  "title": "Orthogonal Vector Frame Schema",
  "type": "object"
}