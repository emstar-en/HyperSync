{
  "$id": "https://hypersync.ai/schemas/composition/agent_composition_schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "Defines multi-agent dimensional compositions",
  "properties": {
    "agents": {
      "items": {
        "properties": {
          "agent_id": {
            "type": "string"
          },
          "dependencies": {
            "items": {
              "type": "string"
            },
            "type": "array"
          },
          "dimensions": {
            "items": {
              "type": "integer"
            },
            "type": "array"
          },
          "role": {
            "type": "string"
          }
        },
        "required": [
          "agent_id",
          "role"
        ],
        "type": "object"
      },
      "minItems": 2,
      "type": "array"
    },
    "composition_id": {
      "description": "Unique composition identifier",
      "type": "string"
    },
    "dimensional_routing": {
      "properties": {
        "routing_strategy": {
          "enum": [
            "broadcast",
            "targeted",
            "adaptive"
          ],
          "type": "string"
        },
        "shared_dimensions": {
          "items": {
            "type": "integer"
          },
          "type": "array"
        },
        "sync_policy": {
          "enum": [
            "eager",
            "lazy",
            "on-demand"
          ],
          "type": "string"
        }
      },
      "type": "object"
    },
    "execution": {
      "properties": {
        "failure_handling": {
          "enum": [
            "abort",
            "continue",
            "fallback"
          ],
          "type": "string"
        },
        "retry_policy": {
          "properties": {
            "backoff_ms": {
              "type": "integer"
            },
            "max_retries": {
              "type": "integer"
            }
          },
          "type": "object"
        },
        "timeout_seconds": {
          "minimum": 1,
          "type": "integer"
        }
      },
      "type": "object"
    },
    "metadata": {
      "properties": {
        "created_at": {
          "format": "date-time",
          "type": "string"
        },
        "created_by": {
          "type": "string"
        }
      },
      "type": "object"
    },
    "pattern": {
      "description": "Composition pattern",
      "enum": [
        "sequential",
        "parallel",
        "hierarchical",
        "mesh",
        "pipeline"
      ],
      "type": "string"
    }
  },
  "required": [
    "composition_id",
    "pattern",
    "agents"
  ],
  "title": "Agent Composition Schema",
  "type": "object"
}