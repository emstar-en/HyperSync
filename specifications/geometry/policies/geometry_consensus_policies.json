        "Tier3": "Experimental consensus without receipt guarantees"
      },
      "validation_schema_ref": "HyperSync_ALPHA/03_specifications/schemas/consensus_validation.schema.json"
    },
    "default_policies": [
      {
        "algorithm": {
          "convergence_threshold": 1e-06,
          "max_iterations": 1000,
          "type": "iterative_gradient_descent"
        },
        "consensus_tier": "Tier1",
        "curvature_aware": true,
        "description": "Compute consensus as Riemannian barycenter in curved space",
        "determinism_tiers": [
          "D0",
          "D1"
        ],
        "failure_modes": [
          {
            "action": "fallback_to_euclidean_average",
            "condition": "non_convergence",
            "fallback": "compute_euclidean_centroid",
            "logic": "If max_iterations_exceeded: return mean(points)"
          },
          {
            "action": "fall_back_to_safer_mechanism",
            "condition": "numerical_instability",
            "fallback_mechanism": "euclidean_approximation"
          },
          {
            "action": "abort_consensus",
            "condition": "curvature_singularity",
            "fallback": "log_for_offline_geometry_diagnostics"
          }
        ],
        "name": "Riemannian Barycenter Consensus v2",
        "policy_id": "riemannian_barycenter_consensus_v2"
      },
      {
        "algorithm": {
          "curvature_types": [
            "negative",
            "zero",
            "positive"
          ],
          "type": "closed_form_barycenter"
        },
        "consensus_tier": "Tier1",
        "curvature_aware": true,
        "description": "Consensus in constant curvature spaces (hyperbolic, spherical, Euclidean)",
        "determinism_tiers": [
          "D0",
          "D1"
        ],
        "failure_modes": [
          {
            "action": "abort_consensus",
            "condition": "points_outside_valid_domain",
            "fallback": "log_for_offline_geometry_diagnostics"
          },
          {
            "action": "fall_back_to_safer_mechanism",
            "condition": "antipodal_points_in_spherical",
            "fallback_mechanism": "perturbed_consensus"
          }
        ],
        "name": "Constant Curvature Consensus v2",
        "policy_id": "constant_curvature_consensus_v2"
      }
    ],
    "metadata": {
      "created_by": "HyperSync Geometry/PCT/AGUA Integration Plan",
      "description": "Curvature-aware consensus algorithms and failure modes",
