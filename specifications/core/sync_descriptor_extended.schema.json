{
  "$id": "https://hypersync.ai/schemas/ico/sync_descriptor_extended.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "ICO Sync descriptor with attestation policy integration",
  "properties": {
    "attestation_policy": {
      "$ref": "attestation_policy.schema.json"
    },
    "dimension": {
      "minimum": 1,
      "type": "integer"
    },
    "invariants": {
      "items": {
        "type": "string"
      },
      "type": "array"
    },
    "kind": {
      "const": "ICOSyncDescriptorExtended",
      "type": "string"
    },
    "merge_policy": {
      "enum": [
        "E_vector",
        "S_geodesic_project",
        "H_pt_native"
      ],
      "type": "string"
    },
    "numeric_policy": {
      "type": "object"
    },
    "post_commit_verification": {
      "properties": {
        "enabled": {
          "type": "boolean"
        },
        "verification_attestations": {
          "items": {
            "type": "string"
          },
          "type": "array"
        }
      },
      "type": "object"
    },
    "pre_commit_guards": {
      "items": {
        "properties": {
          "attestation_refs": {
            "items": {
              "type": "string"
            },
            "type": "array"
          },
          "condition": {
            "type": "string"
          },
          "guard_id": {
            "type": "string"
          }
        },
        "type": "object"
      },
      "type": "array"
    },
    "profile": {
      "enum": [
        "E",
        "H",
        "S"
      ],
      "type": "string"
    }
  },
  "required": [
    "kind",
    "profile",
    "dimension",
    "merge_policy",
    "attestation_policy"
  ],
  "title": "ICOSyncDescriptorExtended",
  "type": "object"
}