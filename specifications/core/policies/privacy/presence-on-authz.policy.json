{
  "category": "authorization",
  "description": "Requires proof of presence in hyperbolic space for authorization",
  "enforcement": "strict",
  "metadata": {
    "author": "HyperSync Security Team",
    "created": "2024-12-04",
    "tags": [
      "privacy",
      "authorization",
      "zero-knowledge"
    ]
  },
  "parameters": {
    "max_age_seconds": 300,
    "max_distance": 5.0,
    "proof_type": "zk-snark",
    "require_attestation": true
  },
  "policy": "presence-on-authz.policy",
  "rules": [
    {
      "action": "allow",
      "condition": "has_valid_presence_proof(agent, location)",
      "description": "Agent must prove presence at claimed location",
      "id": "presence-proof",
      "severity": "critical"
    },
    {
      "action": "allow",
      "condition": "geodesic_distance(agent.location, resource.location) < max_distance",
      "description": "Agent must be within authorized region",
      "id": "proximity-check",
      "severity": "high"
    },
    {
      "action": "allow",
      "condition": "proof_age < max_age",
      "description": "Presence proof must be recent",
      "id": "temporal-validity",
      "severity": "medium"
    },
    {
      "action": "validate",
      "condition": "is_zero_knowledge_proof(proof)",
      "description": "Presence proof must not reveal exact location",
      "id": "zero-knowledge",
      "severity": "high"
    }
  ],
  "type": "privacy"
}