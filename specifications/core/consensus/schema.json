{
    "type": "object",
    "properties": {
        "consensus_algorithm": {
            "type": "string",
            "enum": ["Geometric-BFT", "Spatial-PoS"],
            "default": "Geometric-BFT"
        },
        "entropy_threshold": {
            "type": "number",
            "default": 0.2,
            "description": "Maximum allowed system entropy before halting"
        },
        "quorum_size": {
            "type": "integer",
            "default": 3,
            "description": "Minimum number of spatial nodes for a quorum"
        }
    },
    "required": ["consensus_algorithm"]
}