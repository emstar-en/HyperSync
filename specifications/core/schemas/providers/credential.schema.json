{
  "$id": "https://hypersync.ai/schemas/providers/credential.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "Encrypted credentials for external providers",
  "properties": {
    "created_at": {
      "format": "date-time",
      "type": "string"
    },
    "created_by": {
      "type": "string"
    },
    "credential_id": {
      "type": "string"
    },
    "credential_type": {
      "type": "string"
    },
    "encrypted_value": {
      "type": "string"
    },
    "encryption_method": {
      "type": "string"
    },
    "expires_at": {
      "format": "date-time",
      "type": "string"
    },
    "key_id": {
      "type": "string"
    },
    "last_used": {
      "format": "date-time",
      "type": "string"
    },
    "metadata": {
      "type": "object"
    },
    "name": {
      "type": "string"
    },
    "provider_type": {
      "type": "string"
    },
    "scopes": {
      "type": "array"
    },
    "status": {
      "type": "string"
    }
