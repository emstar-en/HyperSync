{
  "$id": "https://hypersync.ai/schemas/tuning/stable.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "A stable environment for continuous model tuning with gold sample validation",
  "properties": {
    "base_model": {
      "description": "Base model being tuned",
      "properties": {
        "catalogue_entry": {
          "type": "string"
        },
        "checkpoint": {
          "type": "string"
        },
        "model_id": {
          "type": "string"
        }
      },
      "required": [
        "model_id",
        "catalogue_entry"
      ],
      "type": "object"
    },
    "checkpoint_config": {
      "description": "Checkpoint management",
      "properties": {
        "auto_catalogue": {
          "default": true,
          "description": "Auto-register checkpoints in catalogue",
          "type": "boolean"
        },
        "keep_best_n": {
          "default": 3,
          "minimum": 1,
          "type": "integer"
        },
        "keep_last_n": {
          "default": 2,
          "minimum": 1,
          "type": "integer"
        },
        "save_frequency": {
          "default": "on_improvement",
          "enum": [
            "every_epoch",
            "every_n_steps",
            "on_improvement"
          ],
          "type": "string"
        },
        "save_steps": {
          "minimum": 1,
          "type": "integer"
        }
      },
      "type": "object"
    },
    "cicd_integration": {
      "description": "CI/CD pipeline integration",
      "properties": {
        "auto_trigger": {
          "default": false,
          "type": "boolean"
        },
        "deployment_target": {
          "type": "string"
        },
        "pipeline_id": {
          "type": "string"
        },
        "trigger_on": {
          "items": {
            "enum": [
              "checkpoint",
              "epoch_complete",
              "quality_gate_pass",
              "manual"
            ],
            "type": "string"
          },
          "type": "array"
        }
      },
      "type": "object"
    },
    "created_at": {
      "format": "date-time",
      "type": "string"
    },
    "created_by": {
      "type": "string"
    },
    "current_run": {
      "description": "Current active run ID",
      "type": [
        "string",
        "null"
      ]
    },
    "dataset_config": {
      "description": "Training dataset configuration",
      "properties": {
        "preprocessing": {
          "properties": {
            "max_length": {
              "type": "integer"
            },
            "padding": {
              "enum": [
                "max_length",
                "longest",
                "do_not_pad"
              ],
              "type": "string"
            },
            "truncation": {
              "type": "boolean"
            }
          },
          "type": "object"
        },
        "sources": {
          "items": {
            "properties": {
              "format": {
                "enum": [
                  "jsonl",
                  "parquet",
                  "csv",
                  "hf_dataset"
                ],
                "type": "string"
              },
              "location": {
                "type": "string"
              },
              "type": {
                "enum": [
                  "nvm_block",
                  "file",
                  "url",
                  "gold_samples"
                ],
                "type": "string"
              },
              "weight": {
                "maximum": 1,
                "minimum": 0,
                "type": "number"
              }
            },
            "type": "object"
          },
          "type": "array"
        },
        "validation_split": {
          "default": 0.1,
          "maximum": 1,
          "minimum": 0,
          "type": "number"
        }
      },
      "type": "object"
    },
    "description": {
      "description": "Description of the stable's purpose",
      "type": "string"
    },
    "metadata": {
      "type": "object"
    },
    "name": {
      "description": "Human-readable name for the stable",
      "maxLength": 128,
      "minLength": 1,
      "type": "string"
    },
    "runs": {
      "description": "History of tuning runs",
      "items": {
        "properties": {
          "best_checkpoint": {
            "type": "string"
          },
          "checkpoints": {
            "items": {
              "type": "string"
            },
            "type": "array"
          },
          "completed_at": {
            "format": "date-time",
            "type": "string"
          },
          "metrics": {
            "type": "object"
          },
          "run_id": {
            "type": "string"
          },
          "started_at": {
            "format": "date-time",
            "type": "string"
          },
          "status": {
            "enum": [
              "running",
              "completed",
              "failed",
              "stopped"
            ],
            "type": "string"
          }
        },
        "type": "object"
      },
      "type": "array"
    },
    "stable_id": {
      "description": "Unique identifier for the tuning stable",
      "pattern": "^stable-[a-f0-9]{8}-[a-f0-9]{4}-[a-f0-9]{4}-[a-f0-9]{4}-[a-f0-9]{12}$",
      "type": "string"
    },
    "status": {
      "default": "idle",
      "enum": [
        "idle",
        "running",
        "paused",
        "completed",
        "failed"
      ],
      "type": "string"
    },
    "tags": {
      "items": {
        "type": "string"
      },
      "type": "array"
    },
    "tuning_config": {
      "description": "Tuning configuration",
      "properties": {
        "hyperparameters": {
          "properties": {
            "batch_size": {
              "minimum": 1,
              "type": "integer"
            },
            "epochs": {
              "minimum": 1,
              "type": "integer"
            },
            "learning_rate": {
              "minimum": 0,
              "type": "number"
            },
            "lora_alpha": {
              "minimum": 0,
              "type": "number"
            },
            "lora_dropout": {
              "maximum": 1,
              "minimum": 0,
              "type": "number"
            },
            "lora_r": {
              "minimum": 1,
              "type": "integer"
            },
            "warmup_steps": {
              "minimum": 0,
              "type": "integer"
            }
          },
          "type": "object"
        },
        "method": {
          "default": "lora",
          "enum": [
            "lora",
            "qlora",
            "full_finetune",
            "prefix_tuning",
            "adapter",
            "ia3"
          ],
          "type": "string"
        },
        "optimization": {
          "properties": {
            "gradient_accumulation_steps": {
              "minimum": 1,
              "type": "integer"
            },
            "max_grad_norm": {
              "minimum": 0,
              "type": "number"
            },
            "optimizer": {
              "enum": [
                "adam",
                "adamw",
                "sgd",
                "adafactor"
              ],
              "type": "string"
            },
            "scheduler": {
              "enum": [
                "linear",
                "cosine",
                "constant",
                "polynomial"
              ],
              "type": "string"
            }
          },
          "type": "object"
        },
        "target_modules": {
          "description": "Model layers to target for tuning",
          "items": {
            "type": "string"
          },
          "type": "array"
        }
      },
      "type": "object"
    },
    "updated_at": {
      "format": "date-time",
      "type": "string"
    },
    "validation_config": {
      "description": "Validation and quality gates",
      "properties": {
        "early_stopping": {
          "properties": {
            "enabled": {
              "default": true,
              "type": "boolean"
            },
            "metric": {
              "default": "validation_loss",
              "type": "string"
            },
            "patience": {
              "default": 3,
              "minimum": 1,
              "type": "integer"
            }
          },
          "type": "object"
        },
        "gold_sample_suite": {
          "description": "Gold sample suite ID",
          "type": "string"
        },
        "quality_gates": {
          "properties": {
            "max_perplexity": {
              "minimum": 0,
              "type": "number"
            },
            "max_regression_tolerance": {
              "maximum": 1,
              "minimum": 0,
              "type": "number"
            },
            "min_accuracy": {
              "maximum": 1,
              "minimum": 0,
              "type": "number"
            },
            "min_gold_sample_pass_rate": {
              "maximum": 1,
              "minimum": 0,
              "type": "number"
            }
          },
          "type": "object"
        },
        "validation_frequency": {
          "default": "every_epoch",
          "enum": [
            "every_epoch",
            "every_n_steps",
            "on_checkpoint"
          ],
          "type": "string"
        },
        "validation_steps": {
          "minimum": 1,
          "type": "integer"
        }
      },
      "type": "object"
    }
  },
  "required": [
    "stable_id",
    "name",
    "base_model",
    "created_at",
    "status"
  ],
  "title": "Tuning Stable",
  "type": "object"
}