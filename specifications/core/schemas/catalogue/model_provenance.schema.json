{
  "$id": "https://hypersync.ai/schemas/catalogue/model_provenance.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "Origin and source information for models",
  "properties": {
    "external_metadata": {
      "properties": {
        "claimed_lineage": {
          "description": "Lineage information from source",
          "type": "string"
        },
        "import_date": {
          "format": "date-time",
          "type": "string"
        },
        "origin": {
          "description": "Source URL or identifier",
          "type": "string"
        },
        "user_notes": {
          "type": "string"
        },
        "verified": {
          "description": "Whether provenance has been verified",
          "type": "boolean"
        }
      },
      "type": "object"
    },
    "source_type": {
      "enum": [
        "external",
        "internal",
        "hybrid"
      ],
      "type": "string"
    },
    "user_managed_history": {
      "properties": {
        "entries": {
          "items": {
            "properties": {
              "date": {
                "format": "date",
                "type": "string"
              },
              "description": {
                "type": "string"
              },
              "source": {
                "type": "string"
              }
            },
            "type": "object"
          },
          "type": "array"
        }
      },
      "type": "object"
    }
  },
  "required": [
    "source_type"
  ],
  "title": "Model Provenance",
  "type": "object"
}