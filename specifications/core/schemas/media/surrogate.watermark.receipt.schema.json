{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "properties": {
    "commit": {
      "type": "object"
    },
    "renderer": {
      "type": "string"
    },
    "sequence": {
      "type": "integer"
    },
    "streamId": {
      "type": "string"
    },
    "type": {
      "const": "media.surrogate.watermark.receipt"
    },
    "watermark": {
      "properties": {
        "digest": {
          "type": "string"
        },
        "opacity": {
          "maximum": 1,
          "minimum": 0,
          "type": "number"
        },
        "position": {
          "enum": [
            "tl",
            "tr",
            "bl",
            "br",
            "center"
          ]
        },
        "text": {
          "type": "string"
        }
      },
      "required": [
        "text",
        "position",
        "opacity"
      ],
      "type": "object"
    }
  },
  "required": [
    "type",
    "streamId",
    "sequence",
    "renderer",
    "watermark"
  ],
  "title": "Surrogate Watermark Receipt",
  "type": "object"
}