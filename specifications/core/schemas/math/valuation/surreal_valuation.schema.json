{
  "$id": "https://hypersync.ai/schemas/math/surreal_valuation.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "Valuation-theoretic adapter for numeric stability and error budgets",
  "properties": {
    "hahn_series_representation": {
      "properties": {
        "base_field": {
          "enum": [
            "QQ",
            "RR",
            "surreal"
          ],
          "type": "string"
        },
        "coefficients": {
          "additionalProperties": {
            "type": "number"
          },
          "type": "object"
        },
        "support": {
          "description": "Well-ordered support set (ordinals)",
          "items": {
            "type": "string"
          },
          "type": "array"
        }
      },
      "type": "object"
    },
    "kind": {
      "const": "SurrealValuation",
      "type": "string"
    },
    "ordered_group": {
      "properties": {
        "group_id": {
          "type": "string"
        },
        "identity": {
          "type": "string"
        },
        "operation": {
          "enum": [
            "addition",
            "multiplication"
          ],
          "type": "string"
        },
        "ordering": {
          "enum": [
            "lexicographic",
            "surreal_birthday",
            "hahn_series"
          ],
          "type": "string"
        }
      },
      "required": [
        "group_id",
        "operation",
        "ordering"
      ],
      "type": "object"
    },
    "valuation_id": {
      "type": "string"
    },
    "valuation_map": {
      "properties": {
        "codomain": {
          "description": "Target ordered group",
          "type": "string"
        },
        "domain": {
          "description": "Source domain (e.g., 'numeric_errors', 'ulp_budgets')",
          "type": "string"
        },
        "mapping_rules": {
          "items": {
            "properties": {
              "source_term": {
                "type": "string"
              },
              "target_element": {
                "type": "string"
              },
              "valuation_function": {
                "type": "string"
              }
            },
            "type": "object"
          },
          "type": "array"
        }
      },
      "required": [
        "domain",
        "codomain",
        "mapping_rules"
      ],
      "type": "object"
    }
  },
  "required": [
    "kind",
    "valuation_id",
    "ordered_group",
    "valuation_map"
  ],
  "title": "SurrealValuation",
  "type": "object"
}