{
  "$id": "https://hypersync.ai/schemas/security/node_identity.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "Identity and hierarchy information for users and nodes",
  "properties": {
    "authentication": {
      "properties": {
        "credential_hash": {
          "type": "string"
        },
        "enabled": {
          "default": false,
          "type": "boolean"
        },
        "method": {
          "enum": [
            "password",
            "key",
            "certificate",
            "none"
          ]
        }
      },
      "type": "object"
    },
    "hierarchy": {
      "properties": {
        "children_ids": {
          "items": {
            "type": "string"
          },
          "type": "array"
        },
        "level": {
          "description": "Hierarchy level (0=root)",
          "minimum": 0,
          "type": "integer"
        },
        "parent_id": {
          "description": "Parent node ID",
          "type": "string"
        }
      },
      "type": "object"
    },
    "node_id": {
      "description": "Unique node identifier",
      "type": "string"
    },
    "node_type": {
      "description": "Type of node",
      "enum": [
        "user",
        "model",
        "stack",
        "network",
        "system"
      ]
    },
    "permissions": {
      "items": {
        "description": "Permission strings (e.g., 'policy:write', 'nvm:read')",
        "type": "string"
      },
      "type": "array"
    },
    "priority": {
      "description": "Priority level in hierarchy (0=lowest, 100=highest)",
      "maximum": 100,
      "minimum": 0,
      "type": "integer"
    }
  },
  "required": [
    "node_id",
    "node_type",
    "priority"
  ],
  "title": "NodeIdentity",
  "type": "object"
}