{
  "$id": "https://hypersync.ai/schemas/consensus/algebraic_consensus_receipt.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "properties": {
    "byzantine_evidence": {
      "properties": {
        "detected": {
          "type": "boolean"
        },
        "implicated_nodes": {
          "items": {
            "type": "string"
          },
          "type": "array"
        },
        "witness_polynomial": {
          "type": "string"
        }
      },
      "type": "object"
    },
    "consistency_verdict": {
      "enum": [
        "consistent",
        "byzantine_detected",
        "indeterminate",
        "computation_failed"
      ],
      "type": "string"
    },
    "kind": {
      "const": "AlgebraicConsensusReceipt",
      "type": "string"
    },
    "receipt_id": {
      "pattern": "^algebra-receipt-[A-Za-z0-9\\-]{36}$",
      "type": "string"
    },
    "report_ref": {
      "type": "string"
    },
    "signatures": {
      "items": {
        "properties": {
          "algorithm": {
            "enum": [
              "ed25519",
              "ecdsa"
            ],
            "type": "string"
          },
          "signature": {
            "type": "string"
          },
          "signer_id": {
            "type": "string"
          },
          "timestamp": {
            "format": "date-time",
            "type": "string"
          }
        },
        "required": [
          "signer_id",
          "signature",
          "algorithm"
        ],
        "type": "object"
      },
      "minItems": 1,
      "type": "array"
    },
    "subject_ref": {
      "type": "string"
    },
    "timestamp": {
      "format": "date-time",
      "type": "string"
    }
  },
  "required": [
    "kind",
    "receipt_id",
    "consistency_verdict",
    "signatures",
    "timestamp"
  ],
  "title": "AlgebraicConsensusReceipt",
  "type": "object"
}