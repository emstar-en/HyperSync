{
  "$id": "https://hypersync.ai/schemas/consensus/algebraic_consensus_report.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "properties": {
    "computed_at": {
      "format": "date-time",
      "type": "string"
    },
    "consistency_result": {
      "properties": {
        "byzantine_detected": {
          "type": "boolean"
        },
        "byzantine_nodes": {
          "items": {
            "type": "string"
          },
          "type": "array"
        },
        "ideal_membership": {
          "properties": {
            "one_in_ideal": {
              "type": "boolean"
            },
            "witness_polynomial": {
              "type": "string"
            }
          },
          "type": "object"
        },
        "is_consistent": {
          "type": "boolean"
        }
      },
      "required": [
        "is_consistent",
        "ideal_membership"
      ],
      "type": "object"
    },
    "groebner_basis": {
      "properties": {
        "basis_polynomials": {
          "items": {
            "properties": {
              "degree": {
                "type": "integer"
              },
              "expression": {
                "type": "string"
              },
              "id": {
                "type": "string"
              },
              "leading_term": {
                "type": "string"
              }
            },
            "type": "object"
          },
          "type": "array"
        },
        "basis_size": {
          "type": "integer"
        },
        "computation_time_ms": {
          "type": "number"
        },
        "reduction_steps": {
          "type": "integer"
        }
      },
      "required": [
        "basis_polynomials",
        "computation_time_ms",
        "basis_size"
      ],
      "type": "object"
    },
    "kind": {
      "const": "AlgebraicConsensusReport",
      "type": "string"
    },
    "subject_ref": {
      "type": "string"
    }
  },
  "required": [
    "kind",
    "subject_ref",
    "groebner_basis",
    "consistency_result",
    "computed_at"
  ],
  "title": "AlgebraicConsensusReport",
  "type": "object"
}