{
  "$id": "https://hypersync.ai/schemas/consensus/braid_equivalence_receipt.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "Receipt proving equivalence of message interleavings via braid canonicalization",
  "properties": {
    "canonical_form": {
      "properties": {
        "canonicalization_method": {
          "enum": [
            "artin_rewrite",
            "garside_normal",
            "left_greedy",
            "right_greedy"
          ],
          "type": "string"
        },
        "final_word_length": {
          "type": "integer"
        },
        "normal_form": {
          "type": "string"
        },
        "rewrite_steps": {
          "type": "integer"
        }
      },
      "required": [
        "normal_form",
        "canonicalization_method"
      ],
      "type": "object"
    },
    "equivalence_result": {
      "properties": {
        "are_equivalent": {
          "type": "boolean"
        },
        "confidence": {
          "maximum": 1,
          "minimum": 0,
          "type": "number"
        },
        "proof_method": {
          "enum": [
            "canonical_comparison",
            "matsumoto_theorem",
            "word_problem_solver"
          ],
          "type": "string"
        },
        "rewrite_sequence": {
          "items": {
            "properties": {
              "intermediate_word": {
                "type": "string"
              },
              "rule_applied": {
                "type": "string"
              },
              "step": {
                "type": "integer"
              }
            },
            "type": "object"
          },
          "type": "array"
        }
      },
      "required": [
        "are_equivalent",
        "proof_method"
      ],
      "type": "object"
    },
    "kind": {
      "const": "BraidEquivalenceReceipt",
      "type": "string"
    },
    "receipt_id": {
      "pattern": "^braid-receipt-[A-Za-z0-9\\-]{36}$",
      "type": "string"
    },
    "signatures": {
      "items": {
        "properties": {
          "algorithm": {
            "type": "string"
          },
          "signature": {
            "type": "string"
          },
          "signer_id": {
            "type": "string"
          }
        },
        "type": "object"
      },
      "type": "array"
    },
    "timestamp": {
      "format": "date-time",
      "type": "string"
    },
    "trace_refs": {
      "description": "References to BraidTraceSubject instances being compared",
      "items": {
        "type": "string"
      },
      "minItems": 2,
      "type": "array"
    }
  },
  "required": [
    "kind",
    "receipt_id",
    "trace_refs",
    "canonical_form",
    "equivalence_result",
    "timestamp"
  ],
  "title": "BraidEquivalenceReceipt",
  "type": "object"
}