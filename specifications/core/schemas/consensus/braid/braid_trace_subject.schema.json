{
  "$id": "https://hypersync.ai/schemas/consensus/braid_trace_subject.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "Message interleaving trace mapped to braid group elements",
  "properties": {
    "braid_word": {
      "properties": {
        "braid_group": {
          "pattern": "^B_[0-9]+$",
          "type": "string"
        },
        "generators": {
          "items": {
            "properties": {
              "index": {
                "minimum": 1,
                "type": "integer"
              },
              "inverse": {
                "type": "boolean"
              },
              "symbol": {
                "pattern": "^\u03c3_[0-9]+$|^\u03c3_[0-9]+\\^-1$",
                "type": "string"
              }
            },
            "type": "object"
          },
          "type": "array"
        },
        "word_length": {
          "minimum": 0,
          "type": "integer"
        }
      },
      "required": [
        "generators",
        "braid_group"
      ],
      "type": "object"
    },
    "conflict_structure": {
      "properties": {
        "adjacency_matrix": {
          "items": {
            "items": {
              "type": "integer"
            },
            "type": "array"
          },
          "type": "array"
        },
        "conflict_pairs": {
          "items": {
            "properties": {
              "conflict_type": {
                "enum": [
                  "temporal",
                  "causal",
                  "resource"
                ],
                "type": "string"
              },
              "event_i": {
                "type": "string"
              },
              "event_j": {
                "type": "string"
              }
            },
            "type": "object"
          },
          "type": "array"
        }
      },
      "type": "object"
    },
    "kind": {
      "const": "BraidTraceSubject",
      "type": "string"
    },
    "orchestration_trace": {
      "items": {
        "properties": {
          "event_id": {
            "type": "string"
          },
          "event_type": {
            "enum": [
              "send",
              "receive",
              "commit",
              "abort"
            ],
            "type": "string"
          },
          "node_id": {
            "type": "string"
          },
          "payload_hash": {
            "type": "string"
          },
          "timestamp": {
            "format": "date-time",
            "type": "string"
          }
        },
        "required": [
          "event_id",
          "timestamp",
          "node_id",
          "event_type"
        ],
        "type": "object"
      },
      "type": "array"
    },
    "timestamp": {
      "format": "date-time",
      "type": "string"
    },
    "trace_id": {
      "pattern": "^trace-[A-Za-z0-9\\-]{36}$",
      "type": "string"
    }
  },
  "required": [
    "kind",
    "trace_id",
    "orchestration_trace",
    "braid_word",
    "timestamp"
  ],
  "title": "BraidTraceSubject",
  "type": "object"
}