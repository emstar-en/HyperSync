{
  "$id": "https://hypersync.ai/schemas/assembly/deployment.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "Record of a deployed node assembly",
  "properties": {
    "assembly_id": {
      "type": "string"
    },
    "deployed_at": {
      "format": "date-time",
      "type": "string"
    },
    "deployment_id": {
      "type": "string"
    },
    "endpoints": {
      "type": "array"
    },
    "health": {
      "type": "object"
    },
    "ld_address": {
      "type": "string"
    },
    "logs": {
      "type": "array"
    },
    "metrics": {
      "type": "object"
    },
    "node_id": {
      "type": "string"
    },
    "status": {
      "type": "string"
    },
    "stopped_at": {
      "format": "date-time",
      "type": "string"
    }
  },
  "required": [
    "deployment_id",
    "assembly_id",
    "node_id",
    "status",
    "deployed_at"
  ],
  "title": "Deployment Record",
  "type": "object"
}