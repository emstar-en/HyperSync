{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "Record of a pipeline execution",
  "properties": {
    "artifacts": {
      "items": {
        "properties": {
          "checksum": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "path": {
            "type": "string"
          },
          "size_bytes": {
            "type": "integer"
          }
        },
        "type": "object"
      },
      "type": "array"
    },
    "completed_at": {
      "format": "date-time",
      "type": "string"
    },
    "deployment": {
      "properties": {
        "deployed": {
          "type": "boolean"
        },
        "model_ids": {
          "items": {
            "type": "string"
          },
          "type": "array"
        },
        "strategy": {
          "type": "string"
        },
        "target_environment": {
          "type": "string"
        }
      },
      "type": "object"
    },
    "duration_seconds": {
      "type": "number"
    },
    "gold_sample_validations": {
      "items": {
        "properties": {
          "passed": {
            "type": "boolean"
          },
          "sample_id": {
            "type": "string"
          },
          "similarity_score": {
            "type": "number"
          }
        },
        "type": "object"
      },
      "type": "array"
    },
    "gold_samples_collected": {
      "description": "IDs of gold samples collected during this run",
      "items": {
        "type": "string"
      },
      "type": "array"
    },
    "logs": {
      "items": {
        "properties": {
          "level": {
            "type": "string"
          },
          "message": {
            "type": "string"
          },
          "stage": {
            "type": "string"
          },
          "timestamp": {
            "type": "string"
          }
        },
        "type": "object"
      },
      "type": "array"
    },
    "pipeline_id": {
      "type": "string"
    },
    "rollback": {
      "properties": {
        "reason": {
          "type": "string"
        },
        "triggered": {
          "type": "boolean"
        }
      },
      "type": "object"
    },
    "run_id": {
      "type": "string"
    },
    "stages": {
      "items": {
        "properties": {
          "completed_at": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "started_at": {
            "type": "string"
          },
          "status": {
            "type": "string"
          },
          "steps": {
            "items": {
              "type": "object"
            },
            "type": "array"
          }
        },
        "type": "object"
      },
      "type": "array"
    },
    "started_at": {
      "format": "date-time",
      "type": "string"
    },
    "status": {
      "enum": [
        "pending",
        "running",
        "success",
        "failed",
        "cancelled",
        "rolled_back"
      ],
      "type": "string"
    },
    "trigger": {
      "properties": {
        "source": {
          "type": "string"
        },
        "type": {
          "type": "string"
        },
        "user": {
          "type": "string"
        }
      },
      "type": "object"
    }
  },
  "required": [
    "run_id",
    "pipeline_id",
    "status",
    "started_at"
  ],
  "title": "Pipeline Run",
  "type": "object"
}