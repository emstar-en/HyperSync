{
  "$id": "https://example.org/ico/connect.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "properties": {
    "accept": {
      "properties": {
        "attest": {
          "type": "object"
        },
        "model": {
          "type": "string"
        },
        "policy": {
          "$ref": "../ico/icop.schema.json"
        },
        "profile": {
          "enum": [
            "E",
            "H",
            "S"
          ],
          "type": "string"
        },
        "session_id": {
          "type": "string"
        }
      },
      "required": [
        "profile",
        "policy",
        "session_id"
      ],
      "type": "object"
    },
    "hello": {
      "properties": {
        "attest_req": {
          "type": "boolean"
        },
        "icod": {
          "$ref": "../ico/icod.schema.json"
        },
        "wants": {
          "properties": {
            "model": {
              "type": "string"
            },
            "profile": {
              "enum": [
                "E",
                "H",
                "S"
              ],
              "type": "string"
            }
          },
          "type": "object"
        }
      },
      "required": [
        "icod",
        "wants"
      ],
      "type": "object"
    }
  },
  "required": [
    "hello",
    "accept"
  ],
  "type": "object"
}