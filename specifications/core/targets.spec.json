{
  "meta": {
    "version": "1.1.0",
    "description": "Defines the build targets for HyperSync using STUNIR, including secure/native options.",
    "status": "ALPHA"
  },
  "targets": [
    {
      "id": "hypersync-python-core",
      "name": "HyperSync Core (Python)",
      "mode": "hosted",
      "role": "host_runtime",
      "language": "python",
      "min_python_version": "3.10",
      "output_path": "dist/python/core",
      "tier": "core",
      "features": {
        "vnes": "standard",
        "geometry": "conservative"
      }
    },
    {
      "id": "hypersync-rust-core",
      "name": "HyperSync Core (Rust)",
      "mode": "compiled",
      "role": "backend_compiler",
      "language": "rust",
      "output_path": "dist/rust/core",
      "tier": "core",
      "features": {
        "vnes": "standard",
        "geometry": "conservative"
      }
    },
    {
      "id": "hypersync-wasm-core",
      "name": "HyperSync Core (WASM)",
      "mode": "compiled",
      "role": "backend_compiler",
      "language": "wasm",
      "output_path": "dist/wasm/core",
      "tier": "core",
      "status": "experimental"
    }
  ],
  "mathematical_foundations": {
    "target_resolution": {
      "structure": "Directed Acyclic Graph (DAG)",
      "logic": "Topological sort of dependencies ensures build order."
    }
  },
  "fault_detection": {
    "missing_toolchain": {
      "check": "Verify presence of compiler/interpreter for 'language' field",
      "action": "Skip target and warn, or fail if 'critical': true."
    },
    "abi_incompatibility": {
      "check": "Check target architecture vs host architecture",
      "action": "Cross-compile if supported, else fail."
    }
  },
  "detailed_mechanisms": {
    "output_path_resolution": {
      "logic": "Join(dist_root, target.output_path, version_string)",
      "collision_handling": "Overwrite if clean build, error if incremental and hash differs."
    }
  }
}