{
  "meta": {
    "id": "spec.core.service_tiers",
    "version": "1.0.4",
    "description": "Defines feature flags, routing attestation levels, and configuration defaults for HyperSync service tiers.",
    "status": "ALPHA"
  },
  "tiers": {
    "core": {
      "name": "Core",
      "license": "AGPLv3",
      "description": "Open source foundation. Self-hosted, community-supported.",
      "features": {
        "routing_attestation": "standard",
        "ico_probe_access": {
          "mode": "conditional",
          "description": "Requires proof of work/identity for every probe.",
          "required_receipts": [
            "AttestationValidationReceipt",
            "SignatureReceipt"
          ]
        },
        "vnes_libraries": [
          "essential"
        ],
        "cloud_hosting": false,
        "team_tools": false,
        "audit_logs": false,
        "sla_support": false,
        "managed_deployment": false,
        "zk_capabilities": {
          "verification": true,
          "proving_standard": true,
          "proving_privacy": false,
          "proving_recursive": false,
          "proving_hyperscale": false
        },
        "determinism_policy": {
          "allowed_tiers": [
            "D0",
            "D1"
          ]
        },
        "pct_capabilities": [
          "cartographer",
          "trailblazer"
        ],
        "consensus_access": [
          "gossip",
          "vector_clock",
          "crdt",
          "merkle_tree",
          "simple_bft",
          "tangent_space_gossip",
          "hyperbolic_tree_aggregation",
          "fractal_dimension",
          "conformal_geometry",
          "flag_manifold",
          "symplectic_geometry",
          "geometric_median",
          "horosphere_bft",
          "ideal_boundary_bft",
          "poincare_disk_bft",
          "null_geodesic_bft",
          "spherical_bft",
          "stereographic_bft",
          "building_geometry_bft",
          "randers_metric_bft",
          "liouville_theorem_bft",
          "hyperbolic_random_graph_bft",
          "gromov_boundary_bft"
        ],
        "allowed_integration_modes": [
          "native",
          "wrapper"
        ],
        "policy_override_capability": false
      },
      "config_defaults": {
        "max_nodes": -1,
        "rate_limit_policy": "hardware_bound"
      }
    }
  },
  "mathematical_foundations": {
    "feature_inclusion": {
      "logic": "Set Theory",
      "formula": "Features(Tier) = BaseFeatures U TierSpecificFeatures"
    }
  },
  "fault_detection": {
    "license_violation": {
      "check": "Runtime check of active features vs signed license key",
      "action": "Graceful degradation to 'Core' feature set."
    },
    "configuration_conflict": {
      "check": "Validate config_defaults against hard limits",
      "action": "Clamp values to safe range."
    }
  },
  "detailed_mechanisms": {
    "tier_enforcement": {
      "mechanism": "Cryptographically signed capabilities token (JWT-like)",
      "verification": "Public key verification at service startup."
    }
  }
}