{
  "$id": "https://hypersync.ai/schemas/ico/bridge.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "Bridge between Lorentzian Domains",
  "properties": {
    "bandwidth_mbps": {
      "type": "integer"
    },
    "bridge_id": {
      "type": "string"
    },
    "bridge_type": {
      "enum": [
        "direct",
        "relay",
        "gateway"
      ],
      "type": "string"
    },
    "created_at": {
      "format": "date-time",
      "type": "string"
    },
    "latency_ms": {
      "type": "number"
    },
    "metadata": {
      "type": "object"
    },
    "metrics": {
      "type": "object"
    },
    "name": {
      "type": "string"
    },
    "source_ld": {
      "type": "string"
    },
    "status": {
      "type": "string"
    },
    "target_ld": {
      "type": "string"
    }
  },
  "required": [
    "bridge_id",
    "source_ld",
    "target_ld",
    "created_at"
  ],
  "title": "LD Bridge",
  "type": "object"
}