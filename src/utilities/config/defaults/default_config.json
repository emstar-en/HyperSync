{
  "consensus": {
    "barycenter": {
      "adaptive_step_size": true,
      "convergence_tolerance": 1e-06,
      "default_algorithm": "gradient_descent",
      "initial_step_size": 0.1,
      "max_iterations": 100
    },
    "byzantine": {
      "consensus_method": "geometric_median",
      "fault_tolerance_ratio": "1/3",
      "outlier_detection": {
        "enabled": true,
        "method": "distance_based",
        "threshold_sigma": 3.0
      }
    },
    "synchronization": {
      "convergence_tolerance": 1e-06,
      "default_method": "consensus_pull",
      "max_rounds": 50,
      "timeout_seconds": 30
    }
  },
  "kappa": {
    "allowed_range": {
      "max": 10.0,
      "min": -10.0
    },
    "default_kappa": -1.0,
    "density_regimes": {
      "dense": {
        "kappa_range": [
          -10.0,
          -2.0
        ],
        "recommended_for": [
          "complex_embeddings",
          "high_dimensional_data"
        ],
        "semantic_density": "high"
      },
      "rarified": {
        "kappa_range": [
          -0.1,
          0.0
        ],
        "recommended_for": [
          "sparse_data",
          "euclidean_approximation"
        ],
        "semantic_density": "low"
      },
      "standard": {
        "kappa_range": [
          -2.0,
          -0.1
        ],
        "recommended_for": [
          "general_purpose",
          "balanced_performance"
        ],
        "semantic_density": "medium"
      }
    },
    "transition_settings": {
      "default_method": "parallel_transport",
      "max_steps": 1000,
      "tolerance": 1e-06
    },
    "validation": {
      "enabled": true,
      "strict_mode": false,
      "tolerance": 1e-06
    }
  },
  "performance": {
    "batch_size": 100,
    "cache_enabled": true,
    "cache_size_mb": 512,
    "max_workers": 8,
    "parallel_computation": true,
    "timeout_seconds": 300
  },
  "security": {
    "authentication": {
      "enabled": true,
      "method": "api_key",
      "token_expiry_seconds": 3600
    },
    "encryption": {
      "algorithm": "AES-256-GCM",
      "enabled": true,
      "key_size": 256
    },
    "rate_limiting": {
      "burst_size": 100,
      "enabled": true,
      "requests_per_minute": 1000
    }
  },
  "system": {
    "api_base_url": "https://api.hypersync.local/v1",
    "environment": "production",
    "log_level": "info"
  },
  "transport": {
    "exponential_map": {
      "default_method": "runge_kutta",
      "step_size": 0.01,
      "tolerance": 1e-06
    },
    "geodesic_computation": {
      "default_points": 100,
      "max_points": 10000,
      "tolerance": 1e-06
    },
    "holonomy_validation": {
      "check_curvature": true,
      "enabled": true,
      "tolerance": 1e-06
    },
    "parallel_transport": {
      "default_connection": "levi_civita",
      "max_iterations": 1000,
      "numerical_method": "runge_kutta_4",
      "tolerance": 1e-06
    }
  },
  "validation": {
    "auto_correct": false,
    "enabled": true,
    "strict_mode": false,
    "tolerance": 1e-06,
    "validation_rules": [
      "curvature_bounds",
      "numerical_stability",
      "geometric_consistency",
      "byzantine_tolerance",
      "holonomy_validation"
    ]
  }
}