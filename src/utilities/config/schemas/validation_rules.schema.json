{
  "$id": "validation_rules.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "Schema for defining validation rules",
  "properties": {
    "action": {
      "enum": [
        "reject",
        "warn",
        "auto_correct",
        "log"
      ],
      "type": "string"
    },
    "auto_correction": {
      "properties": {
        "enabled": {
          "type": "boolean"
        },
        "method": {
          "type": "string"
        },
        "parameters": {
          "type": "object"
        }
      },
      "type": "object"
    },
    "category": {
      "enum": [
        "geometric",
        "numerical",
        "semantic",
        "security",
        "performance"
      ],
      "type": "string"
    },
    "conditions": {
      "items": {
        "properties": {
          "field": {
            "type": "string"
          },
          "operator": {
            "enum": [
              "eq",
              "ne",
              "lt",
              "le",
              "gt",
              "ge",
              "in",
              "not_in",
              "matches",
              "range"
            ],
            "type": "string"
          },
          "tolerance": {
            "type": "number"
          },
          "value": {}
        },
        "required": [
          "field",
          "operator",
          "value"
        ],
        "type": "object"
      },
      "type": "array"
    },
    "description": {
      "type": "string"
    },
    "enabled": {
      "default": true,
      "type": "boolean"
    },
    "rule_id": {
      "type": "string"
    },
    "rule_name": {
      "type": "string"
    },
    "severity": {
      "enum": [
        "error",
        "warning",
        "info"
      ],
      "type": "string"
    }
  },
  "required": [
    "rule_id",
    "rule_name",
    "category",
    "severity",
    "conditions",
    "action"
  ],
  "title": "Validation Rules Schema",
  "type": "object"
}