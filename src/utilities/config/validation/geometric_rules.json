{
  "description": "Validation rules for geometric properties",
  "rule_set_id": "geometric_validation_rules",
  "rules": [
    {
      "action": "reject",
      "category": "geometric",
      "conditions": [
        {
          "field": "kappa",
          "operator": "range",
          "tolerance": 0.0,
          "value": [
            -10.0,
            10.0
          ]
        }
      ],
      "description": "Ensure kappa values are within allowed range",
      "enabled": true,
      "error_message": "Kappa value {kappa} outside allowed range [-10.0, 10.0]",
      "rule_id": "curvature_bounds",
      "rule_name": "Curvature Bounds Check",
      "severity": "error"
    },
    {
      "action": "warn",
      "auto_correction": {
        "enabled": true,
        "method": "set_to_kappa",
        "parameters": {}
      },
      "category": "geometric",
      "conditions": [
        {
          "field": "sectional_curvature",
          "operator": "eq",
          "tolerance": 1e-06,
          "value": "kappa"
        }
      ],
      "description": "Verify sectional curvature matches kappa",
      "enabled": true,
      "rule_id": "sectional_curvature_consistency",
      "rule_name": "Sectional Curvature Consistency",
      "severity": "warning"
    },
    {
      "action": "reject",
      "category": "geometric",
      "conditions": [
        {
          "field": "metric_eigenvalues",
          "operator": "gt",
          "tolerance": 1e-10,
          "value": 0.0
        }
      ],
      "description": "Ensure metric tensor is positive definite",
      "enabled": true,
      "error_message": "Metric tensor is not positive definite",
      "rule_id": "metric_positive_definite",
      "rule_name": "Metric Positive Definiteness",
      "severity": "error"
    },
    {
      "action": "warn",
      "category": "geometric",
      "conditions": [
        {
          "field": "geodesic_length",
          "operator": "lt",
          "tolerance": 0.0,
          "value": "infinity"
        }
      ],
      "description": "Verify geodesics can be extended indefinitely",
      "enabled": true,
      "rule_id": "geodesic_completeness",
      "rule_name": "Geodesic Completeness Check",
      "severity": "warning"
    },
    {
      "action": "reject",
      "category": "geometric",
      "conditions": [
        {
          "field": "holonomy_error",
          "operator": "lt",
          "tolerance": 0.0,
          "value": 1e-06
        }
      ],
      "description": "Verify parallel transport around closed loop returns to original",
      "enabled": true,
      "error_message": "Holonomy error {holonomy_error} exceeds tolerance",
      "rule_id": "holonomy_closure",
      "rule_name": "Holonomy Closure Validation",
      "severity": "error"
    }
  ]
}