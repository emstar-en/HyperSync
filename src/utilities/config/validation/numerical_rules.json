{
  "description": "Validation rules for numerical stability",
  "rule_set_id": "numerical_validation_rules",
  "rules": [
    {
      "action": "reject",
      "category": "numerical",
      "conditions": [
        {
          "field": "converged",
          "operator": "eq",
          "tolerance": 0.0,
          "value": true
        }
      ],
      "description": "Ensure iterative algorithms converge",
      "enabled": true,
      "error_message": "Algorithm failed to converge after {iterations} iterations",
      "rule_id": "convergence_check",
      "rule_name": "Convergence Check",
      "severity": "error"
    },
    {
      "action": "warn",
      "category": "numerical",
      "conditions": [
        {
          "field": "relative_error",
          "operator": "lt",
          "tolerance": 0.0,
          "value": 1e-06
        }
      ],
      "description": "Verify numerical precision is sufficient",
      "enabled": true,
      "rule_id": "numerical_precision",
      "rule_name": "Numerical Precision Check",
      "severity": "warning"
    },
    {
      "action": "reject",
      "category": "numerical",
      "conditions": [
        {
          "field": "value",
          "operator": "range",
          "tolerance": 0.0,
          "value": [
            1e-300,
            1e+300
          ]
        }
      ],
      "description": "Detect numerical overflow or underflow",
      "enabled": true,
      "error_message": "Numerical overflow or underflow detected",
      "rule_id": "overflow_underflow",
      "rule_name": "Overflow/Underflow Detection",
      "severity": "error"
    },
    {
      "action": "warn",
      "auto_correction": {
        "enabled": true,
        "method": "adaptive_step_size",
        "parameters": {
          "max": 1.0,
          "min": 1e-10
        }
      },
      "category": "numerical",
      "conditions": [
        {
          "field": "step_size",
          "operator": "range",
          "tolerance": 0.0,
          "value": [
            1e-10,
            1.0
          ]
        }
      ],
      "description": "Ensure step size is appropriate for stability",
      "enabled": true,
      "rule_id": "step_size_stability",
      "rule_name": "Step Size Stability",
      "severity": "warning"
    }
  ]
}