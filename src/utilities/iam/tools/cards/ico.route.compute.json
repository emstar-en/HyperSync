{
  "description": "Compute a route between two nodes",
  "name": "ico.route.compute",
  "parameters": {
    "properties": {
      "constraints": {
        "description": "Optional routing constraints",
        "properties": {
          "avoid": {
            "items": {
              "type": "string"
            },
            "type": "array"
          },
          "max_hops": {
            "minimum": 1,
            "type": "integer"
          }
        },
        "type": "object"
      },
      "dst": {
        "description": "Destination node ID",
        "type": "string"
      },
      "src": {
        "description": "Source node ID",
        "type": "string"
      }
    },
    "required": [
      "src",
      "dst"
    ],
    "type": "object"
  },
  "returns": {
    "properties": {
      "path": {
        "items": {
          "type": "string"
        },
        "type": "array"
      }
    },
    "type": "object"
  }
}