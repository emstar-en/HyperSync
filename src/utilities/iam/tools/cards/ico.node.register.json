{
  "description": "Register a node in a Lorentzian Domain",
  "name": "ico.node.register",
  "parameters": {
    "properties": {
      "address_type": {
        "default": "model",
        "description": "Node type",
        "enum": [
          "model",
          "agent",
          "service"
        ],
        "type": "string"
      },
      "coordinates": {
        "default": {
          "t": 0,
          "x": 0,
          "y": 0,
          "z": 0
        },
        "description": "4D spacetime coordinates",
        "properties": {
          "t": {
            "type": "number"
          },
          "x": {
            "type": "number"
          },
          "y": {
            "type": "number"
          },
          "z": {
            "type": "number"
          }
        },
        "type": "object"
      },
      "ld_id": {
        "description": "Target domain ID",
        "type": "string"
      },
      "node_id": {
        "description": "Unique node identifier",
        "maxLength": 128,
        "minLength": 1,
        "type": "string"
      }
    },
    "required": [
      "ld_id",
      "node_id"
    ],
    "type": "object"
  },
  "returns": {
    "properties": {
      "ld_id": {
        "type": "string"
      },
      "node_id": {
        "type": "string"
      }
    },
    "type": "object"
  }
}