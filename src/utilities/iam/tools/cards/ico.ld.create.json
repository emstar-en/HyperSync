{
  "description": "Create a new Lorentzian Domain (secure workspace)",
  "name": "ico.ld.create",
  "parameters": {
    "properties": {
      "curvature": {
        "default": 0.0,
        "description": "Spacetime curvature (0.0 = flat)",
        "type": "number"
      },
      "dimension": {
        "default": 4,
        "description": "Spacetime dimension",
        "maximum": 10,
        "minimum": 2,
        "type": "integer"
      },
      "metric_type": {
        "default": "minkowski",
        "description": "Spacetime metric type",
        "enum": [
          "minkowski",
          "schwarzschild",
          "kerr"
        ],
        "type": "string"
      },
      "name": {
        "description": "Domain name (e.g., 'secure-workspace')",
        "maxLength": 64,
        "minLength": 1,
        "type": "string"
      },
      "security_level": {
        "default": "isolated",
        "description": "Security isolation level",
        "enum": [
          "isolated",
          "shared",
          "public"
        ],
        "type": "string"
      }
    },
    "required": [
      "name"
    ],
    "type": "object"
  },
  "returns": {
    "properties": {
      "ld_id": {
        "type": "string"
      },
      "name": {
        "type": "string"
      }
    },
    "type": "object"
  }
}