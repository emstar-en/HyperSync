{
  "$id": "consensus_validation.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "Schema for validating consensus results",
  "properties": {
    "consensus_result": {
      "description": "Result to validate",
      "type": "object"
    },
    "kappa": {
      "type": "number"
    },
    "original_proposals": {
      "items": {
        "type": "object"
      },
      "type": "array"
    },
    "validation_checks": {
      "items": {
        "enum": [
          "geometric_median_property",
          "byzantine_tolerance",
          "convergence_proof",
          "distance_bounds"
        ],
        "type": "string"
      },
      "type": "array"
    }
  },
  "required": [
    "consensus_result",
    "original_proposals",
    "kappa"
  ],
  "title": "Consensus Validation Schema",
  "type": "object"
}