{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "properties": {
    "description": {
      "type": "string"
    },
    "proposal_id": {
      "type": "string"
    },
    "proposal_type": {
      "enum": [
        "config_change",
        "policy_update",
        "system_upgrade",
        "emergency_change",
        "routine_change",
        "member_addition",
        "member_removal"
      ]
    },
    "status": {
      "enum": [
        "draft",
        "submitted",
        "under_review",
        "voting",
        "approved",
        "rejected",
        "implemented",
        "cancelled"
      ]
    },
    "title": {
      "type": "string"
    }
  },
  "required": [
    "proposal_id",
    "proposal_type",
    "title",
    "description"
  ],
  "title": "Governance Proposal",
  "type": "object"
}