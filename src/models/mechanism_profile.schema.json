{
  "$id": "https://hypersync.io/schemas/mechanism_profile.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "Schema for validating consensus mechanism resource profiles",
  "properties": {
    "created": {
      "format": "date-time",
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "profiles": {
      "patternProperties": {
        "^[a-z_]+$": {
          "properties": {
            "category": {
              "enum": [
                "epidemic",
                "causality_tracking",
                "conflict_free",
                "integrity_verification",
                "byzantine_fault_tolerant",
                "voting",
                "leader_election",
                "consensus",
                "blockchain",
                "geometric"
              ],
              "type": "string"
            },
            "characteristics": {
              "properties": {
                "complexity": {
                  "enum": [
                    "low",
                    "moderate",
                    "high",
                    "very_high",
                    "extreme"
                  ],
                  "type": "string"
                },
                "consistency": {
                  "enum": [
                    "eventual",
                    "causal",
                    "strong"
                  ],
                  "type": "string"
                },
                "fault_tolerance": {
                  "type": "string"
                },
                "partition_tolerance": {
                  "enum": [
                    "poor",
                    "moderate",
                    "good",
                    "excellent"
                  ],
                  "type": "string"
                }
              },
              "type": "object"
            },
            "id": {
              "type": "string"
            },
            "name": {
              "type": "string"
            },
            "resources": {
              "properties": {
                "cpu_cores_min": {
                  "minimum": 1,
                  "type": "integer"
                },
                "cpu_cores_recommended": {
                  "minimum": 1,
                  "type": "integer"
                },
                "disk_io_ops": {
                  "enum": [
                    "minimal",
                    "low",
                    "moderate",
                    "high",
                    "very_high",
                    "extreme"
                  ],
                  "type": "string"
                },
                "gpu_memory_mb": {
                  "minimum": 0,
                  "type": "integer"
                },
                "gpu_required": {
                  "type": "boolean"
                },
                "memory_mb_min": {
                  "minimum": 1,
                  "type": "integer"
                },
                "memory_mb_recommended": {
                  "minimum": 1,
                  "type": "integer"
                },
                "network_bandwidth_mbps": {
                  "minimum": 1,
                  "type": "integer"
                }
              },
              "required": [
                "cpu_cores_min",
                "memory_mb_min",
                "gpu_required"
              ],
              "type": "object"
            },
            "scalability": {
              "properties": {
                "latency_ms_typical": {
                  "type": "string"
                },
                "max_nodes_tested": {
                  "minimum": 1,
                  "type": "integer"
                },
                "throughput_ops_sec": {
                  "type": "string"
                }
              },
              "type": "object"
            },
            "weight": {
              "enum": [
                "lightweight",
                "light",
                "moderate",
                "heavy",
                "very_heavy"
              ],
              "type": "string"
            }
          },
          "required": [
            "id",
            "name",
            "category",
            "weight",
            "resources"
          ],
          "type": "object"
        }
      },
      "type": "object"
    }
  },
  "required": [
    "version",
    "profiles"
  ],
  "title": "Consensus Mechanism Profile Schema",
  "type": "object"
}