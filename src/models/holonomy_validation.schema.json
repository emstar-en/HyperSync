{
  "$id": "holonomy_validation.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "Schema for validating parallel transport around closed loops",
  "properties": {
    "closed_loop": {
      "properties": {
        "is_closed": {
          "description": "Verify loop closure",
          "type": "boolean"
        },
        "waypoints": {
          "description": "Points defining closed loop",
          "items": {
            "type": "object"
          },
          "type": "array"
        }
      },
      "required": [
        "waypoints"
      ],
      "type": "object"
    },
    "compute_curvature": {
      "default": true,
      "description": "Compute curvature from holonomy",
      "type": "boolean"
    },
    "initial_vector": {
      "description": "Initial tangent vector",
      "items": {
        "type": "number"
      },
      "type": "array"
    },
    "kappa": {
      "description": "Curvature parameter",
      "type": "number"
    },
    "tolerance": {
      "default": 1e-06,
      "type": "number"
    }
  },
  "required": [
    "closed_loop",
    "initial_vector",
    "kappa"
  ],
  "title": "Holonomy Validation Schema",
  "type": "object"
}