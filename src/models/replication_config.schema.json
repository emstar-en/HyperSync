{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "properties": {
    "conflict_resolution": {
      "enum": [
        "lww",
        "fww",
        "merge",
        "reject",
        "escalate"
      ]
    },
    "max_snapshots": {
      "type": "integer"
    },
    "merge_policy": {
      "enum": [
        "e_vector",
        "s_geodesic",
        "h_pt_native"
      ]
    },
    "node_id": {
      "type": "string"
    },
    "snapshot_interval": {
      "type": "integer"
    }
  },
  "required": [
    "node_id",
    "merge_policy"
  ],
  "title": "Replication Configuration",
  "type": "object"
}