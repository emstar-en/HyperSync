{
  "$id": "riemannian_barycenter.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "Schema for computing geometric mean on Riemannian manifolds",
  "properties": {
    "algorithm": {
      "default": "gradient_descent",
      "enum": [
        "gradient_descent",
        "fixed_point",
        "karcher_flow"
      ],
      "type": "string"
    },
    "convergence_tolerance": {
      "default": 1e-06,
      "type": "number"
    },
    "kappa": {
      "description": "Curvature parameter",
      "type": "number"
    },
    "max_iterations": {
      "default": 100,
      "type": "integer"
    },
    "points": {
      "description": "Points on manifold to average",
      "items": {
        "type": "object"
      },
      "minItems": 2,
      "type": "array"
    },
    "weights": {
      "description": "Optional weights for weighted barycenter",
      "items": {
        "minimum": 0,
        "type": "number"
      },
      "type": "array"
    }
  },
  "required": [
    "points",
    "kappa"
  ],
  "title": "Riemannian Barycenter Schema",
  "type": "object"
}