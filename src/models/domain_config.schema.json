{
  "$id": "https://hypersync.io/schemas/domain_config.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "Configuration for domain registry and operations",
  "properties": {
    "capabilities": {
      "properties": {
        "enable_black_holes": {
          "default": true,
          "description": "Enable black hole domains",
          "type": "boolean"
        },
        "enable_cosmologies": {
          "default": true,
          "description": "Enable cosmological domains",
          "type": "boolean"
        },
        "enable_time_varying": {
          "default": true,
          "description": "Enable time-varying domains",
          "type": "boolean"
        }
      },
      "type": "object"
    },
    "policies": {
      "properties": {
        "enforce_causality": {
          "default": true,
          "type": "boolean"
        },
        "enforce_horizon_acl": {
          "default": true,
          "type": "boolean"
        },
        "require_attestation": {
          "default": false,
          "type": "boolean"
        }
      },
      "type": "object"
    },
    "registry": {
      "properties": {
        "auto_register": {
          "default": true,
          "description": "Auto-register built-in domains",
          "type": "boolean"
        },
        "default_domain": {
          "description": "Default domain for operations",
          "type": "string"
        },
        "enabled_domains": {
          "description": "List of enabled domain types",
          "items": {
            "type": "string"
          },
          "type": "array"
        }
      },
      "type": "object"
    },
    "routing": {
      "properties": {
        "enable_cross_curvature": {
          "default": true,
          "description": "Enable cross-curvature transitions",
          "type": "boolean"
        },
        "max_transition_hops": {
          "default": 5,
          "minimum": 1,
          "type": "integer"
        },
        "transition_cost_model": {
          "default": "curvature_based",
          "enum": [
            "uniform",
            "curvature_based",
            "dimension_based"
          ],
          "type": "string"
        }
      },
      "type": "object"
    },
    "validation": {
      "properties": {
        "strict_mode": {
          "default": false,
          "description": "Strict validation of parameters",
          "type": "boolean"
        },
        "validate_on_create": {
          "default": true,
          "type": "boolean"
        },
        "validate_transitions": {
          "default": true,
          "type": "boolean"
        }
      },
      "type": "object"
    }
  },
  "title": "HyperSync Domain Configuration",
  "type": "object"
}