{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "STUNIR Build Receipt",
  "type": "object",
  "required": [
    "version",
    "timestamp",
    "input_hash",
    "output_hash",
    "transformations",
    "signature"
  ],
  "properties": {
    "version": {
      "type": "string"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time"
    },
    "input_hash": {
      "type": "string",
      "pattern": "^sha256:[a-f0-9]{64}$"
    },
    "output_hash": {
      "type": "string",
      "pattern": "^sha256:[a-f0-9]{64}$"
    },
    "transformations": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "step",
          "tool",
          "input_hash",
          "output_hash"
        ],
        "properties": {
          "step": {
            "type": "string"
          },
          "tool": {
            "type": "string"
          },
          "input_hash": {
            "type": "string"
          },
          "output_hash": {
            "type": "string"
          }
        }
      }
    },
    "signature": {
      "type": "object",
      "required": [
        "key_id",
        "value"
      ],
      "properties": {
        "key_id": {
          "type": "string"
        },
        "value": {
          "type": "string"
        }
      }
    }
  }
}