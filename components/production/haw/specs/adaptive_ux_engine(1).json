{
  "version": "1.0.0",
  "namespace": "hypersync.ui.adaptive_ux",
  "description": "Adaptive UX Engine for self-building, user-centric terminal interfaces. Observes behavior, builds user models, adapts interfaces, predicts intent, and automates workflows. Makes the program feel like it builds itself around the user.",
  "types": {
    "UXEngine": {
      "description": "Adaptive UX engine instance",
      "fields": {
        "engine_id": {
          "type": "string",
          "description": "Engine identifier",
          "required": true
        },
        "user_models": {
          "type": "map<string, UserModel>",
          "description": "User models by user_id",
          "required": true
        },
        "active_adaptations": {
          "type": "array<Adaptation>",
          "description": "Currently active adaptations",
          "required": false
        },
        "learning_enabled": {
          "type": "boolean",
          "description": "Learning is enabled",
          "required": true
        },
        "config": {
          "type": "EngineConfig",
          "description": "Engine configuration",
          "required": true
        }
      }
    },
    "EngineConfig": {
      "description": "UX engine configuration",
      "fields": {
        "adaptation_aggressiveness": {
          "type": "float",
          "description": "How aggressively to adapt (0.0-1.0)",
          "required": false
        },
        "min_confidence": {
          "type": "float",
          "description": "Minimum confidence for adaptations (0.0-1.0)",
          "required": false
        },
        "learning_rate": {
          "type": "float",
          "description": "Learning rate for models (0.0-1.0)",
          "required": false
        },
        "prediction_horizon": {
          "type": "integer",
          "description": "Steps ahead to predict",
          "required": false
        },
        "auto_simplify": {
          "type": "boolean",
          "description": "Automatically simplify on frustration",
          "required": false
        }
      }
    },
    "UserModel": {
      "description": "Learned user behavior model",
      "fields": {
        "user_id": {
          "type": "string",
          "description": "User identifier",
          "required": true
        },
        "skill_level": {
          "type": "SkillLevel",
          "description": "Assessed skill level",
          "required": true
        },
        "behavior_patterns": {
          "type": "array<BehaviorPattern>",
          "description": "Identified behavior patterns",
          "required": true
        },
        "preferences": {
          "type": "UserPreference",
          "description": "Learned preferences",
          "required": true
        },
        "workflow_sequences": {
          "type": "array<WorkflowSequence>",
          "description": "Common workflow sequences",
          "required": false
        },
        "frustration_triggers": {
          "type": "array<string>",
          "description": "Identified frustration triggers",
          "required": false
        },
        "efficiency_metrics": {
          "type": "EfficiencyMetrics",
          "description": "User efficiency metrics",
          "required": true
        },
        "last_updated": {
          "type": "integer",
          "description": "Model last updated timestamp",
          "required": true
        }
      }
    },
    "BehaviorPattern": {
      "description": "Identified user behavior pattern",
      "fields": {
        "pattern_id": {
          "type": "string",
          "description": "Pattern identifier",
          "required": true
        },
        "pattern_type": {
          "type": "string",
          "description": "Type of pattern (sequential, cyclical, conditional)",
          "required": true
        },
        "actions": {
          "type": "array<string>",
          "description": "Action sequence",
          "required": true
        },
        "frequency": {
          "type": "integer",
          "description": "Occurrence count",
          "required": true
        },
        "confidence": {
          "type": "float",
          "description": "Pattern confidence (0.0-1.0)",
          "required": true
        },
        "context": {
          "type": "map<string, any>",
          "description": "Context where pattern occurs",
          "required": false
        }
      }
    },
    "WorkflowSequence": {
      "description": "Common workflow sequence",
      "fields": {
        "sequence_id": {
          "type": "string",
          "description": "Sequence identifier",
          "required": true
        },
        "name": {
          "type": "string",
          "description": "Sequence name",
          "required": true
        },
        "steps": {
          "type": "array<WorkflowStep>",
          "description": "Workflow steps",
          "required": true
        },
        "automation_potential": {
          "type": "float",
          "description": "Potential for automation (0.0-1.0)",
          "required": true
        },
        "frequency": {
          "type": "integer",
          "description": "How often performed",
          "required": true
        }
      }
    },
    "WorkflowStep": {
      "description": "Step in workflow sequence",
      "fields": {
        "action": {
          "type": "string",
          "description": "Action performed",
          "required": true
        },
        "parameters": {
          "type": "map<string, any>",
          "description": "Action parameters",
          "required": false
        },
        "automatable": {
          "type": "boolean",
          "description": "Step can be automated",
          "required": true
        }
      }
    },
    "EfficiencyMetrics": {
      "description": "User efficiency metrics",
      "fields": {
        "actions_per_minute": {
          "type": "float",
          "description": "Average actions per minute",
          "required": true
        },
        "error_rate": {
          "type": "float",
          "description": "Error rate (0.0-1.0)",
          "required": true
        },
        "task_completion_time": {
          "type": "map<string, float>",
          "description": "Average completion time by task type",
          "required": false
        },
        "efficiency_score": {
          "type": "float",
          "description": "Overall efficiency (0.0-1.0)",
          "required": true
        }
      }
    },
    "Adaptation": {
      "description": "UI/UX adaptation",
      "fields": {
        "adaptation_id": {
          "type": "string",
          "description": "Adaptation identifier",
          "required": true
        },
        "adaptation_type": {
          "type": "AdaptationType",
          "description": "Type of adaptation",
          "required": true
        },
        "target": {
          "type": "string",
          "description": "What is being adapted",
          "required": true
        },
        "reason": {
          "type": "string",
          "description": "Reason for adaptation",
          "required": true
        },
        "changes": {
          "type": "array<string>",
          "description": "Specific changes made",
          "required": true
        },
        "confidence": {
          "type": "float",
          "description": "Confidence in adaptation (0.0-1.0)",
          "required": true
        },
        "user_notified": {
          "type": "boolean",
          "description": "User was notified",
          "required": true
        },
        "reversible": {
          "type": "boolean",
          "description": "Adaptation can be reversed",
          "required": true
        }
      }
    },
    "AdaptationType": {
      "description": "Type of UX adaptation",
      "enum": [
        "simplification",
        "complexity_increase",
        "layout_change",
        "automation",
        "suggestion",
        "help",
        "workflow_optimization"
      ]
    },
    "IntentPrediction": {
      "description": "Predicted user intent",
      "fields": {
        "predicted_action": {
          "type": "string",
          "description": "Predicted next action",
          "required": true
        },
        "confidence": {
          "type": "float",
          "description": "Prediction confidence (0.0-1.0)",
          "required": true
        },
        "context": {
          "type": "UserContext",
          "description": "Current context",
          "required": true
        },
        "alternatives": {
          "type": "array<string>",
          "description": "Alternative predictions",
          "required": false
        },
        "reasoning": {
          "type": "string",
          "description": "Prediction reasoning",
          "required": false
        }
      }
    },
    "Suggestion": {
      "description": "Proactive suggestion",
      "fields": {
        "suggestion_id": {
          "type": "string",
          "description": "Suggestion identifier",
          "required": true
        },
        "suggestion_type": {
          "type": "string",
          "description": "Type of suggestion (action, shortcut, optimization)",
          "required": true
        },
        "title": {
          "type": "string",
          "description": "Suggestion title",
          "required": true
        },
        "description": {
          "type": "string",
          "description": "Detailed description",
          "required": true
        },
        "action": {
          "type": "string",
          "description": "Action to perform if accepted",
          "required": true
        },
        "benefit": {
          "type": "string",
          "description": "Expected benefit",
          "required": true
        },
        "confidence": {
          "type": "float",
          "description": "Suggestion confidence (0.0-1.0)",
          "required": true
        }
      }
    },
    "FrustrationSignal": {
      "description": "Detected user frustration",
      "fields": {
        "signal_type": {
          "type": "string",
          "description": "Type of frustration signal",
          "required": true
        },
        "severity": {
          "type": "float",
          "description": "Frustration severity (0.0-1.0)",
          "required": true
        },
        "context": {
          "type": "UserContext",
          "description": "Context when detected",
          "required": true
        },
        "indicators": {
          "type": "array<string>",
          "description": "Frustration indicators observed",
          "required": true
        },
        "timestamp": {
          "type": "integer",
          "description": "Detection timestamp",
          "required": true
        }
      }
    },
    "AutomationRule": {
      "description": "Automated workflow rule",
      "fields": {
        "rule_id": {
          "type": "string",
          "description": "Rule identifier",
          "required": true
        },
        "name": {
          "type": "string",
          "description": "Rule name",
          "required": true
        },
        "trigger": {
          "type": "string",
          "description": "Automation trigger condition",
          "required": true
        },
        "workflow": {
          "type": "WorkflowSequence",
          "description": "Workflow to automate",
          "required": true
        },
        "enabled": {
          "type": "boolean",
          "description": "Rule is enabled",
          "required": true
        },
        "auto_approve": {
          "type": "boolean",
          "description": "Auto-approve without confirmation",
          "required": false
        }
      }
    },
    "ContextualHelp": {
      "description": "Contextual help offering",
      "fields": {
        "help_id": {
          "type": "string",
          "description": "Help identifier",
          "required": true
        },
        "trigger": {
          "type": "string",
          "description": "What triggered help offer",
          "required": true
        },
        "help_type": {
          "type": "string",
          "description": "Type of help (tooltip, tutorial, guide)",
          "required": true
        },
        "content": {
          "type": "HelpContent",
          "description": "Help content",
          "required": true
        },
        "interactive": {
          "type": "boolean",
          "description": "Interactive tutorial",
          "required": false
        }
      }
    },
    "ComplexityAdjustment": {
      "description": "UI complexity adjustment",
      "fields": {
        "from_level": {
          "type": "ComplexityLevel",
          "description": "Current complexity level",
          "required": true
        },
        "to_level": {
          "type": "ComplexityLevel",
          "description": "Target complexity level",
          "required": true
        },
        "reason": {
          "type": "string",
          "description": "Reason for adjustment",
          "required": true
        },
        "changes": {
          "type": "array<string>",
          "description": "Specific changes",
          "required": true
        }
      }
    },
    "ErrorRecovery": {
      "description": "Error recovery strategy",
      "fields": {
        "error_type": {
          "type": "string",
          "description": "Type of error",
          "required": true
        },
        "recovery_actions": {
          "type": "array<string>",
          "description": "Actions to recover",
          "required": true
        },
        "prevent_future": {
          "type": "array<string>",
          "description": "Preventive measures",
          "required": false
        },
        "explanation": {
          "type": "string",
          "description": "User-friendly explanation",
          "required": true
        }
      }
    }
  },
  "operations": {
    "initialize_ux_engine": {
      "description": "Initialize adaptive UX engine with configuration and user models. Starts behavior observation.",
      "inputs": {
        "config": {
          "type": "EngineConfig",
          "description": "Engine configuration",
          "required": false
        },
        "load_existing_models": {
          "type": "boolean",
          "description": "Load existing user models",
          "required": false
        }
      },
      "outputs": {
        "engine": {
          "type": "UXEngine",
          "description": "Initialized UX engine"
        },
        "models_loaded": {
          "type": "integer",
          "description": "Number of user models loaded"
        }
      },
      "errors": {
        "INITIALIZATION_FAILED": "Failed to initialize UX engine",
        "MODEL_LOAD_FAILED": "Failed to load existing models"
      }
    },
    "observe_user_behavior": {
      "description": "Observe and record user behavior (actions, timing, errors) for learning and adaptation.",
      "inputs": {
        "user_id": {
          "type": "string",
          "description": "User identifier",
          "required": true
        },
        "action": {
          "type": "string",
          "description": "Action performed",
          "required": true
        },
        "context": {
          "type": "UserContext",
          "description": "Action context",
          "required": true
        },
        "success": {
          "type": "boolean",
          "description": "Action was successful",
          "required": false
        },
        "duration_ms": {
          "type": "integer",
          "description": "Action duration",
          "required": false
        }
      },
      "outputs": {
        "recorded": {
          "type": "boolean",
          "description": "Behavior was recorded"
        },
        "pattern_detected": {
          "type": "boolean",
          "description": "New pattern detected"
        },
        "pattern": {
          "type": "BehaviorPattern",
          "description": "Detected pattern",
          "required": false
        }
      },
      "errors": {
        "OBSERVATION_FAILED": "Failed to record behavior"
      }
    },
    "build_user_model": {
      "description": "Build or update user behavioral model from observations. Identifies patterns, skill level, preferences.",
      "inputs": {
        "user_id": {
          "type": "string",
          "description": "User identifier",
          "required": true
        },
        "observations": {
          "type": "array<map<string, any>>",
          "description": "Behavior observations",
          "required": true
        },
        "incremental": {
          "type": "boolean",
          "description": "Incremental update vs rebuild",
          "required": false
        }
      },
      "outputs": {
        "model": {
          "type": "UserModel",
          "description": "Built/updated user model"
        },
        "patterns_found": {
          "type": "integer",
          "description": "Number of patterns identified"
        },
        "model_quality": {
          "type": "float",
          "description": "Model quality score (0.0-1.0)"
        }
      },
      "errors": {
        "MODEL_BUILD_FAILED": "Failed to build user model",
        "INSUFFICIENT_DATA": "Not enough observations for model"
      }
    },
    "adapt_interface": {
      "description": "Adapt interface based on user model (layout, complexity, features). Makes UI feel self-building.",
      "inputs": {
        "user_id": {
          "type": "string",
          "description": "User identifier",
          "required": true
        },
        "model": {
          "type": "UserModel",
          "description": "User model",
          "required": true
        },
        "current_ui": {
          "type": "UILayout",
          "description": "Current UI layout",
          "required": true
        },
        "notify_user": {
          "type": "boolean",
          "description": "Notify user of adaptations",
          "required": false
        }
      },
      "outputs": {
        "adaptations": {
          "type": "array<Adaptation>",
          "description": "Applied adaptations"
        },
        "adapted_ui": {
          "type": "UILayout",
          "description": "Adapted UI layout"
        }
      },
      "errors": {
        "ADAPTATION_FAILED": "Failed to adapt interface",
        "NO_ADAPTATIONS_NEEDED": "No adaptations necessary"
      }
    },
    "predict_user_intent": {
      "description": "Predict what user will do next based on context and patterns. Enables anticipatory UX.",
      "inputs": {
        "user_id": {
          "type": "string",
          "description": "User identifier",
          "required": true
        },
        "model": {
          "type": "UserModel",
          "description": "User model",
          "required": true
        },
        "context": {
          "type": "UserContext",
          "description": "Current context",
          "required": true
        },
        "num_predictions": {
          "type": "integer",
          "description": "Number of predictions to return",
          "required": false
        }
      },
      "outputs": {
        "predictions": {
          "type": "array<IntentPrediction>",
          "description": "Predicted intents (ordered by confidence)"
        }
      },
      "errors": {
        "PREDICTION_FAILED": "Failed to predict intent",
        "MODEL_INSUFFICIENT": "Model not sufficient for prediction"
      }
    },
    "suggest_actions": {
      "description": "Suggest helpful actions based on predictions and patterns. Proactive assistance.",
      "inputs": {
        "user_id": {
          "type": "string",
          "description": "User identifier",
          "required": true
        },
        "predictions": {
          "type": "array<IntentPrediction>",
          "description": "Intent predictions",
          "required": true
        },
        "max_suggestions": {
          "type": "integer",
          "description": "Maximum suggestions to return",
          "required": false
        }
      },
      "outputs": {
        "suggestions": {
          "type": "array<Suggestion>",
          "description": "Action suggestions"
        }
      },
      "errors": {
        "SUGGESTION_FAILED": "Failed to generate suggestions",
        "NO_SUGGESTIONS": "No suggestions available"
      }
    },
    "simplify_workflow": {
      "description": "Simplify workflow by removing steps, automating parts, or improving efficiency.",
      "inputs": {
        "workflow": {
          "type": "WorkflowSequence",
          "description": "Workflow to simplify",
          "required": true
        },
        "user_model": {
          "type": "UserModel",
          "description": "User model for context",
          "required": true
        }
      },
      "outputs": {
        "simplified_workflow": {
          "type": "WorkflowSequence",
          "description": "Simplified workflow"
        },
        "improvements": {
          "type": "array<string>",
          "description": "Improvements made"
        },
        "time_saved": {
          "type": "integer",
          "description": "Estimated time saved (ms)"
        }
      },
      "errors": {
        "SIMPLIFICATION_FAILED": "Failed to simplify workflow",
        "NO_SIMPLIFICATION_POSSIBLE": "Workflow already optimal"
      }
    },
    "automate_repetitive_tasks": {
      "description": "Identify and automate repetitive tasks from user patterns. Creates automation rules.",
      "inputs": {
        "user_id": {
          "type": "string",
          "description": "User identifier",
          "required": true
        },
        "model": {
          "type": "UserModel",
          "description": "User model",
          "required": true
        },
        "min_frequency": {
          "type": "integer",
          "description": "Minimum repetitions to automate",
          "required": false
        }
      },
      "outputs": {
        "automation_rules": {
          "type": "array<AutomationRule>",
          "description": "Created automation rules"
        },
        "potential_savings": {
          "type": "map<string, integer>",
          "description": "Time savings per rule (ms)"
        }
      },
      "errors": {
        "AUTOMATION_FAILED": "Failed to create automations",
        "NO_REPETITIVE_TASKS": "No repetitive tasks found"
      }
    },
    "provide_contextual_help": {
      "description": "Provide contextual help when user appears stuck or confused. Adaptive guidance.",
      "inputs": {
        "user_id": {
          "type": "string",
          "description": "User identifier",
          "required": true
        },
        "context": {
          "type": "UserContext",
          "description": "Current context",
          "required": true
        },
        "frustration": {
          "type": "FrustrationSignal",
          "description": "Frustration signal (if any)",
          "required": false
        }
      },
      "outputs": {
        "help": {
          "type": "ContextualHelp",
          "description": "Contextual help"
        },
        "help_offered": {
          "type": "boolean",
          "description": "Help was offered to user"
        }
      },
      "errors": {
        "HELP_GENERATION_FAILED": "Failed to generate help",
        "NO_HELP_AVAILABLE": "No relevant help available"
      }
    },
    "adjust_complexity": {
      "description": "Adjust UI complexity based on user skill level and comfort. Progressive disclosure.",
      "inputs": {
        "user_id": {
          "type": "string",
          "description": "User identifier",
          "required": true
        },
        "model": {
          "type": "UserModel",
          "description": "User model",
          "required": true
        },
        "current_layout": {
          "type": "UILayout",
          "description": "Current UI layout",
          "required": true
        },
        "direction": {
          "type": "string",
          "description": "Adjustment direction (increase, decrease, auto)",
          "required": false
        }
      },
      "outputs": {
        "adjustment": {
          "type": "ComplexityAdjustment",
          "description": "Complexity adjustment"
        },
        "adjusted_layout": {
          "type": "UILayout",
          "description": "Adjusted layout"
        }
      },
      "errors": {
        "ADJUSTMENT_FAILED": "Failed to adjust complexity",
        "ALREADY_OPTIMAL": "Complexity already optimal"
      }
    },
    "personalize_experience": {
      "description": "Comprehensive personalization of entire user experience based on model.",
      "inputs": {
        "user_id": {
          "type": "string",
          "description": "User identifier",
          "required": true
        },
        "model": {
          "type": "UserModel",
          "description": "User model",
          "required": true
        },
        "scope": {
          "type": "array<string>",
          "description": "Aspects to personalize (ui, workflows, help, etc.)",
          "required": false
        }
      },
      "outputs": {
        "personalizations": {
          "type": "array<Adaptation>",
          "description": "Applied personalizations"
        },
        "personalization_score": {
          "type": "float",
          "description": "Degree of personalization (0.0-1.0)"
        }
      },
      "errors": {
        "PERSONALIZATION_FAILED": "Failed to personalize experience",
        "INSUFFICIENT_MODEL": "User model insufficient for personalization"
      }
    },
    "learn_from_feedback": {
      "description": "Learn from user feedback (explicit and implicit) to improve model and adaptations.",
      "inputs": {
        "user_id": {
          "type": "string",
          "description": "User identifier",
          "required": true
        },
        "feedback": {
          "type": "array<FeedbackData>",
          "description": "Feedback data",
          "required": true
        },
        "model": {
          "type": "UserModel",
          "description": "Current user model",
          "required": true
        }
      },
      "outputs": {
        "updated_model": {
          "type": "UserModel",
          "description": "Updated user model"
        },
        "improvements": {
          "type": "array<string>",
          "description": "Model improvements made"
        }
      },
      "errors": {
        "LEARNING_FAILED": "Failed to learn from feedback",
        "INVALID_FEEDBACK": "Feedback data is invalid"
      }
    },
    "optimize_user_flow": {
      "description": "Optimize user flow by reordering steps, removing friction, improving efficiency.",
      "inputs": {
        "user_id": {
          "type": "string",
          "description": "User identifier",
          "required": true
        },
        "model": {
          "type": "UserModel",
          "description": "User model",
          "required": true
        },
        "flow": {
          "type": "WorkflowSequence",
          "description": "Flow to optimize",
          "required": true
        }
      },
      "outputs": {
        "optimized_flow": {
          "type": "WorkflowSequence",
          "description": "Optimized flow"
        },
        "efficiency_gain": {
          "type": "float",
          "description": "Estimated efficiency improvement (%)"
        },
        "optimizations": {
          "type": "array<string>",
          "description": "Optimizations applied"
        }
      },
      "errors": {
        "OPTIMIZATION_FAILED": "Failed to optimize flow",
        "FLOW_ALREADY_OPTIMAL": "Flow is already optimal"
      }
    },
