      "system_telemetry",
      "heartbeat_signals"
    ],
    "egress": [
      "alerts",
      "mitigation_triggers"
    ]
  },
  "vnes_config": {
    "runtime": "rust_embedded_safe",
    "resources": {
      "cpu": "high_priority",
      "memory": "low"
    }
  }
}