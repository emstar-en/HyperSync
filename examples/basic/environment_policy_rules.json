{
  "rules": [
    {
      "conditions": {
        "agent": {
          "tier": [
            "basic",
            "pro",
            "enterprise"
          ]
        },
        "path": {
          "prefix": [
            "/home",
            "/tmp"
          ]
        }
      },
      "effect": "allow",
      "priority": 100,
      "rule_id": "allow-basic-read",
      "verb": "fs:read"
    },
    {
      "conditions": {
        "agent": {
          "clearance": "confidential",
          "tier": [
            "pro",
            "enterprise"
          ]
        },
        "path": {
          "prefix": [
            "/home",
            "/var/log"
          ]
        }
      },
      "effect": "allow",
      "priority": 100,
      "rule_id": "allow-pro-write",
      "verb": "fs:write"
    },
    {
      "conditions": {
        "path": {
          "prefix": [
            "/etc",
            "/sys",
            "/proc",
            "/boot"
          ]
        }
      },
      "effect": "deny",
      "priority": 200,
      "rule_id": "deny-system-paths",
      "verb": "fs:write"
    },
    {
      "conditions": {
        "agent": {
          "tier": [
            "enterprise"
          ]
        },
        "resource": {
          "max_disk_mb": 100000
        }
      },
      "effect": "allow",
      "priority": 100,
      "rule_id": "allow-enterprise-sandbox",
      "verb": "sandbox:create"
    }
  ]
}