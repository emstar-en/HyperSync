{
  "apiVersion": "hypersync.io/v1alpha1",
  "kind": "HolonDeployment",
  "metadata": {
    "name": "Deep_Research_Unit_Alpha",
    "description": "A self-contained research unit designed to explore latent connections in unstructured data.",
    "owner": "user:dr_aris",
    "tags": [
      "research",
      "exploration",
      "high_temp"
    ],
    "labels": {
      "env": "sandbox",
      "dept": "research"
    },
    "annotations": {
      "hypersync.io/example": "deep_research_holon_v2",
      "hypersync.io/purpose": "hierarchical_deployment_demo"
    }
  },
  "spec": {
    "holon": {
      "holon_id": "holon_research_001",
      "name": "Research Sector Alpha",
      "parent_holon_id": "root_holon",
      "orchestrator_ref": "agent:research_lead_01",
      "geometry_bounds": {
        "center_coordinate": [
          0.5,
          0.785
        ],
        "radius": 0.2,
        "sector_angle_start": 0.0,
        "sector_angle_end": 1.57
      },
      "resource_quota": {
        "max_agents": 20,
        "max_compute_units": 100,
        "allowed_models": [
          "gpt-4-turbo",
          "claude-3-opus",
          "embedding-v3"
        ]
      },
      "isolation_level": "semi_permeable",
      "description": "Self-contained research Holon for exploring latent structure in unstructured data.",
      "labels": {
        "holon_role": "research_unit",
        "tier": "exploratory"
      },
      "tags": [
        "research",
        "exploration",
        "high_temp"
      ],
      "determinism_config": {
        "determinism_tier": "D2_STATISTICAL",
        "root_seed": "seed:derived_from_parent_holon",
        "seed_strategy": "merkle_tree_v1",
        "clock_sync_strategy": "locked_ratio",
        "allow_nondeterministic_edges": true
      },
      "telemetry": {
        "enabled": true,
        "sample_rate": 0.25,
        "include_traces": true,
        "diag_plane_endpoint": "d0://local/diag/research_alpha",
        "conformance_vector_profile": "profile:research_default"
      },
      "acceptance_gates": {
        "ingress": [
          {
            "gate_id": "gate:lead_inbox",
            "scope": "orchestrator_inbox",
            "strategy": "metropolis_hastings",
            "temperature": 0.8,
            "energy_barrier": 0.4,
            "distance_decay_lambda": 1.0,
            "policy_ref": "policy:metropolis_gate_default",
            "enabled": true
          }
        ],
        "egress": [
          {
            "gate_id": "gate:holon_to_parent",
            "scope": "holon_boundary",
            "strategy": "threshold",
            "temperature": 0.4,
            "energy_barrier": 0.7,
            "policy_ref": "policy:summary_publication_gate",
            "enabled": true
          }
        ],
        "internal": [
          {
            "gate_id": "gate:scout_to_lead",
            "scope": "internal_channel",
            "strategy": "geometry_decay",
            "temperature": 0.9,
            "energy_barrier": 0.2,
            "distance_decay_lambda": 0.5,
            "policy_ref": "policy:langevin_exploration",
            "enabled": true
          }
        ]
      }
    },
    "definitions": {
      "policies": [
        {
          "policy_id": "policy:langevin_exploration",
          "type": "levy_flight",
          "parameters": {
            "temperature": 0.85,
            "momentum": 0.2,
            "step_size": 0.05,
            "exploration_bias": 0.9
          },
          "constraints": {
            "boundary_behavior": "reflect"
          }
        },
        {
          "policy_id": "policy:metropolis_gate_default",
          "type": "acceptance_gate",
          "parameters": {
            "strategy": "metropolis_hastings",
            "temperature_default": 0.8,
            "energy_barrier_default": 0.4
          }
        },
        {
          "policy_id": "policy:summary_publication_gate",
          "type": "acceptance_gate",
          "parameters": {
            "strategy": "threshold",
            "energy_barrier_default": 0.7
          }
        }
      ],
      "stacks": [
        {
          "stack_id": "stack:senior_researcher",
          "name": "Research Lead",
          "objective_alignment": "strict",
          "layers": [
            {
              "layer_type": "cognitive",
              "model_ref": "claude-3-opus",
              "config": {
                "system_prompt": "You are the orchestrator of a research unit. Synthesize findings from your scouts."
              }
            },
            {
              "layer_type": "memory",
              "model_ref": "vector_store_v1",
              "config": {
                "collection": "research_synthesis"
              }
            }
          ],
          "geometry_config": {
            "preferred_curvature": -1.0,
            "movement_policy": "gradient_descent"
          }
        },
        {
          "stack_id": "stack:exploratory_scout",
          "name": "Idea Scout",
          "objective_alignment": "loose",
          "layers": [
            {
              "layer_type": "cognitive",
              "model_ref": "gpt-4-turbo",
              "config": {
                "system_prompt": "You are a scout. Wander the data manifold and report anomalies."
              }
            },
            {
              "layer_type": "perception",
              "model_ref": "embedding-v3",
              "config": {
                "batch_size": 16
              }
            }
          ],
          "geometry_config": {
            "preferred_curvature": -1.0,
            "movement_policy": "policy:langevin_exploration"
          }
        }
      ]
    },
    "instantiation": {
      "orchestrator": {
        "agent_id": "agent:research_lead_01",
        "stack_ref": "stack:senior_researcher",
        "initial_coordinate": [
          0.5,
          0.785
        ]
      },
      "workers": [
        {
          "count": 5,
          "name_pattern": "agent:scout_{n}",
          "stack_ref": "stack:exploratory_scout",
          "distribution_strategy": "random_uniform"
        },
        {
          "count": 2,
          "name_pattern": "agent:specialist_{n}",
          "stack_ref": "stack:exploratory_scout",
          "distribution_strategy": "biased_towards_anomalies"
        }
      ]
    }
  }
}