{
  "constraints": {
    "max_latency_ms": 250.0,
    "min_availability_slo": 0.99,
    "no_internet": false,
    "no_pii": false
  },
  "determinism_tier": "D2_open_world",
  "id": "sdl_generic_storage_profile",
  "interfaces": [
    {
      "contract": "control_plane",
      "direction": "ingress",
      "id": "sdl_ingest",
      "observability": {
        "logs": true,
        "metrics": true,
        "traces": false
      },
      "schema_ref": "03_specifications/sdl/sdl_shard_descriptor.schema.json",
      "security": {
        "authn": "operator-authenticated",
        "authz": "role-based",
        "confidentiality": "encrypted-in-transit",
        "integrity": "content-hash-verified"
      },
      "summary": "Ingestion of shards and maintenance of the SDL index."
    },
    {
      "contract": "rpc",
      "direction": "bidirectional",
      "id": "sdl_query",
      "observability": {
        "logs": true,
        "metrics": true,
        "traces": true
      },
      "schema_ref": "03_specifications/sdl/sdl_query_receipt.schema.json",
      "security": {
        "authn": "capsule-or-agent-authenticated",
        "authz": "policy- and clearance-aware",
        "confidentiality": "encrypted-in-transit",
        "integrity": "request-and-response-signature-optional"
      },
      "summary": "Semantic query interface for discovering candidate shards."
    }
  ],
  "kind": "storage",
  "metadata": {
    "docs_sdl": "07_documentation/human/reference/sdl.md",
    "note": "This profile is intentionally vendor-neutral and can be mapped onto any concrete vector index implementation.",
    "used_at_bootstrap": true
  },
  "summary": "Generic, environment-independent profile for the Semantic Data Lake (SDL) as a storage and discovery surface.",
  "tenancy": "single_tenant",
  "version": "0.1.0"
}