{
  "capsule": "hypersync.coordination.mesh",
  "version": "1.0.0",
  "dependencies": [
    "hypersync.routing.hyperbolic"
  ],
  "components": {
    "MeshCoordinator": {
      "type": "class",
      "description": "Manages the coordination of domains and contracts within the mesh.",
      "methods": {
        "register_domain": {
          "description": "Registers a new domain in the mesh.",
          "args": [
            { "name": "domain_id", "type": "string" },
            { "name": "capabilities", "type": "Dict" }
          ],
          "returns": "bool"
        },
        "create_contract": {
          "description": "Initiates a service contract between two domains.",
          "args": [
            { "name": "provider_id", "type": "string" },
            { "name": "consumer_id", "type": "string" },
            { "name": "terms", "type": "Dict" }
          ],
          "returns": "Contract"
        },
        "negotiate_route": {
          "description": "Negotiates a multi-hop route for a contract.",
          "args": [
            { "name": "contract_id", "type": "string" }
          ],
          "returns": "Route"
        }
      }
    }
  }
}