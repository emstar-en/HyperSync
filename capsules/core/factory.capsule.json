{
  "capsule": "hypersync.core.factory",
  "version": "1.0.0",
  "dependencies": [
    "hypersync.core.registry"
  ],
  "components": {
    "ComponentFactory": {
      "type": "class",
      "description": "Factory for creating HyperSync components dynamically.",
      "methods": {
        "create_component": {
          "description": "Creates a component instance based on its type and configuration.",
          "args": [
            { "name": "component_type", "type": "string" },
            { "name": "config", "type": "Dict" }
          ],
          "returns": "object"
        },
        "register_builder": {
          "description": "Registers a builder function for a specific component type.",
          "args": [
            { "name": "component_type", "type": "string" },
            { "name": "builder", "type": "Callable" }
          ],
          "returns": "void"
        }
      }
    }
  }
}