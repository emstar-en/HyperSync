{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "HyperSync Core Environment Capsule API Schema (Enhanced)",
  "type": "object",
  "definitions": {
    "EnvironmentId": {
      "type": "string",
      "description": "Identifier for an environment instance."
    },
    "TemplateId": {
      "type": "string",
      "description": "Identifier for an environment template."
    },
    "SessionId": {
      "type": "string",
      "description": "Identifier for a session attached to an environment instance."
    },
    "EnvironmentKind": {
      "type": "string",
      "enum": [
        "system_core",
        "tenant_shared",
        "tenant_dedicated",
        "user_personal",
        "ephemeral_experiment"
      ],
      "description": "Classification of environment by scope and lifecycle."
    },
    "EnvironmentOperation": {
      "type": "string",
      "enum": [
        "DefineTemplate",
        "UpdateTemplate",
        "GetTemplate",
        "ListTemplates",
        "InstantiateEnvironment",
        "ModifyEnvironment",
        "SnapshotEnvironment",
        "RestoreEnvironment",
        "DestroyEnvironment",
        "GetEnvironmentDescriptor",
        "ListEnvironments",
        "AttachSession",
        "DetachSession",
        "FreezeSession",
        "ThawSession"
      ]
    },
    "DeterminismProfile": {
      "type": "object",
      "properties": {
        "tier": {
          "type": "string",
          "description": "Requested determinism tier for environment structural operations."
        },
        "notes": {
          "type": "string",
          "description": "Optional explanatory notes or constraints."
        }
      },
      "required": ["tier"],
      "additionalProperties": false
    },
    "EnvironmentTemplate": {
      "type": "object",
      "properties": {
        "template_id": {
          "$ref": "#/definitions/TemplateId"
        },
        "version": {
          "type": "string",
          "description": "Template version identifier."
        },
        "kind": {
          "$ref": "#/definitions/EnvironmentKind"
        },
        "capsules": {
          "type": "array",
          "description": "List of capsule bindings (geometry, consensus, routing, UI, AI, drivers).",
          "items": {
            "type": "object",
            "properties": {
              "id": { "type": "string" },
              "version": { "type": "string" },
              "determinism_tier": { "type": "string" },
              "trust_zone": { "type": "string" }
            },
            "required": ["id", "version"],
            "additionalProperties": true
          }
        },
        "policies": {
          "type": "array",
          "description": "Policy pack identifiers applied to this environment template.",
          "items": {
            "type": "string"
          }
        },
        "geometry": {
          "type": "object",
          "description": "Geometry spaces, regions, and fences used by the environment.",
          "properties": {
            "spaces": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "regions": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          },
          "additionalProperties": true
        },
        "roles": {
          "type": "array",
          "description": "Roles available within environments instantiated from this template.",
          "items": {
            "type": "string"
          }
        }
      },
      "required": ["template_id", "version", "kind", "capsules"],
      "additionalProperties": true
    },
    "EnvironmentInstanceSummary": {
      "type": "object",
      "properties": {
        "environment_id": { "$ref": "#/definitions/EnvironmentId" },
        "template_id": { "$ref": "#/definitions/TemplateId" },
        "kind": { "$ref": "#/definitions/EnvironmentKind" },
        "state": {
          "type": "string",
          "enum": ["active", "suspended", "destroyed", "initializing"]
        },
        "tenant_id": {
          "type": "string",
          "description": "Tenant or scope associated with this environment instance."
        }
      },
      "required": ["environment_id", "template_id", "kind", "state"],
      "additionalProperties": true
    },
    "SessionBinding": {
      "type": "object",
      "properties": {
        "session_id": { "$ref": "#/definitions/SessionId" },
        "environment_id": { "$ref": "#/definitions/EnvironmentId" },
        "roles": {
          "type": "array",
          "items": { "type": "string" }
        }
      },
      "required": ["session_id", "environment_id"],
      "additionalProperties": true
    },
    "EnvironmentRequest": {
      "type": "object",
      "properties": {
        "operation": { "$ref": "#/definitions/EnvironmentOperation" },
        "environment_id": { "$ref": "#/definitions/EnvironmentId" },
        "template_id": { "$ref": "#/definitions/TemplateId" },
        "session_id": { "$ref": "#/definitions/SessionId" },
        "template_descriptor": { "$ref": "#/definitions/EnvironmentTemplate" },
        "instance_params": {
          "type": "object",
          "description": "Parameters for environment instantiation (tenant, quotas, labels, etc.)."
        },
        "patch": {
          "type": "object",
          "description": "Patch object describing modifications to templates or instances."
        },
        "determinism": { "$ref": "#/definitions/DeterminismProfile" },
        "trace_id": {
          "type": "string",
          "description": "Trace identifier for receipts and telemetry correlation."
        }
      },
      "required": ["operation"],
      "additionalProperties": false
    },
    "EnvironmentResponse": {
      "type": "object",
      "properties": {
        "ok": { "type": "boolean" },
        "result": {
          "type": "object",
          "description": "Operation-specific result (e.g., template, environment descriptor, snapshot handle)."
        },
        "error": {
          "type": ["null", "object"],
          "description": "Error object if ok = false."
        },
        "meta": {
          "type": "object",
          "description": "Metadata including determinism tier, policy pack hashes, and capsule identity."
        }
      },
      "required": ["ok"],
      "additionalProperties": false
    }
  },
  "properties": {
    "request": { "$ref": "#/definitions/EnvironmentRequest" },
    "response": { "$ref": "#/definitions/EnvironmentResponse" }
  },
  "additionalProperties": false
}
